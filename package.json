{
	"name": "w0s.jp",
	"version": "1.0.0",
	"description": "w0s.jp",
	"author": "Saeki Tominaga",
	"type": "module",
	"scripts": {
		"app": "nodemon --inspect --ignore public/ node/dist/app.js",
		"html-build-watch": "run-p _html-build-watch:*",
		"html-build-all": "run-s _html-build-all:*",
		"html-format": "prettier --config .prettierrc --write html/**/*.html",
		"html-lint": "markuplint public/*.html public/admin/*.html public/kumeta/**/*.html public/madoka/**/*.html public/tokyu/**/*.html",
		"html-lint-ejs": "markuplint views/*.ejs",
		"html-lint-errorpage": "markuplint errorpage/*.html",
		"css-stylelint": "stylelint public/assets/style/_src/**/*.css",
		"css-build": "run-p _css-build:*",
		"js-build": "run-p _js-build:*",
		"svg-build": "run-p _svg-build:*",
		"feed": "run-p _feed:*",
		"node-build-watch": "tsc --project node/tsconfig.json -w",
		"node-build-all": "tsc --project node/tsconfig.json",
		"node-test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
		"node-config-convert": "json2ts -i node/configure/schema -o node/configure/type",
		"node-config-validate": "run-p _node-config-validate:*",
		"_html-build-watch:build": "onchange -f add -f change -v html/**/*.html -- node node/dist/build/html.js {{file}}",
		"_html-build-watch:compress": "onchange -f add -f change -v public/**/*.html --exclude public/styleguide/*.html -- brotlin compress {{file}} -m 1",
		"_html-build-watch:lint": "onchange -f add -f change -v public/**/*.html --exclude public/styleguide/*.html -- markuplint {{file}}",
		"_html-build-all:build": "node node/dist/build/html.js html/**/*.html",
		"_html-build-all:compress": "brotlin compress public/*.html -m 1",
		"_html-build-all:compress-admin": "brotlin compress public/admin/**/*.html -m 1",
		"_html-build-all:compress-kumeta": "brotlin compress public/kumeta/**/*.html -m 1",
		"_html-build-all:compress-madoka": "brotlin compress public/madoka/**/*.html -m 1",
		"_html-build-all:compress-tokyu": "brotlin compress public/tokyu/**/*.html -m 1",
		"_html-build-all:lint": "npm run html-lint",
		"_css-build:watch": "postcss public/assets/style/_src/*.css --base public/assets/style/_src -d public/assets/style -w",
		"_css-build:format": "onchange -f add -f change -v public/assets/style/*.css -- prettier {{file}} --write",
		"_css-build:compress": "onchange -f add -f change -v public/assets/style/*.css -- brotlin compress {{file}} -m 1",
		"_css-build:kss": "onchange public/assets/style/*.css -- kss public/assets/style/_src public/styleguide -m *.css --css ../assets/style/styleguide.css --js ../assets/script/w0s.mjs --homepage public/assets/style/_src/styleguide.md --title w0s.jpスタイルガイド",
		"_js-build:watch": "rollup -c -w",
		"_js-build:compress": "onchange -f add -f change -v public/assets/script/*.js public/assets/script/*.mjs -- brotlin compress {{file}} -m 1",
		"_svg-build:watch": "onchange -f add -f change -v image/**/*.svg -- node node/dist/build/svg.js {{file}} svgo.config.cjs",
		"_svg-build:compress": "onchange -f add -f change -v public/**/*.svg -- brotlin compress {{file}} -m 1",
		"_feed:build": "node node/dist/build/feed.js",
		"_feed:compress": "brotlin compress public/**/*.atom -m 1",
		"_node-config-validate:akamatsu-generator": "ajv --spec=draft7 -s node/configure/schema/akamatsu-generator.json -d node/configure/akamatsu-generator.json",
		"_node-config-validate:amazon-ads": "ajv --spec=draft7 -s node/configure/schema/amazon-ads.json -d node/configure/amazon-ads.json",
		"_node-config-validate:build": "ajv --spec=draft7 -s node/configure/schema/build.json -d node/configure/build.json",
		"_node-config-validate:common": "ajv --spec=draft7 -s node/configure/schema/common.json -d node/configure/common.json",
		"_node-config-validate:contact": "ajv --spec=draft7 -s node/configure/schema/contact.json -d node/configure/contact.json",
		"_node-config-validate:crawler-news": "ajv --spec=draft7 -s node/configure/schema/crawler-news.json -d node/configure/crawler-news.json",
		"_node-config-validate:crawler-resource": "ajv --spec=draft7 -s node/configure/schema/crawler-resource.json -d node/configure/crawler-resource.json",
		"_node-config-validate:kumeta-twitter": "ajv --spec=draft7 -s node/configure/schema/kumeta-twitter.json -d node/configure/kumeta-twitter.json",
		"_node-config-validate:madoka-official-news": "ajv --spec=draft7 -s node/configure/schema/madoka-official-news.json -d node/configure/madoka-official-news.json",
		"_node-config-validate:tokyu-car-history": "ajv --spec=draft7 -s node/configure/schema/tokyu-car-history.json -d node/configure/tokyu-car-history.json"
	},
	"dependencies": {
		"@log4js-node/smtp": "^2.0.8",
		"@saekitominaga/paapi-item-image-url-parser": "^2.2.2",
		"@saekitominaga/string-escape-html": "^1.0.2",
		"amazon-paapi": "^1.0.7",
		"basic-auth": "^2.0.1",
		"compression": "^1.7.4",
		"dayjs": "^1.11.6",
		"diff": "^5.1.0",
		"ejs": "^3.1.8",
		"express": "^4.18.2",
		"express-validator": "^6.14.2",
		"github-slugger": "^2.0.0",
		"htpasswd-js": "^1.0.2",
		"log4js": "^6.7.0",
		"nodemailer": "^6.8.0",
		"paapi5-typescript-sdk": "^0.2.0",
		"sharp": "^0.31.1",
		"sqlite": "^4.1.2",
		"sqlite3": "^5.1.2",
		"twitter": "^1.7.1",
		"twitter-text": "^3.1.0"
	},
	"devDependencies": {
		"@markuplint/ejs-parser": "^2.2.2",
		"@prettier/plugin-xml": "^2.2.0",
		"@rollup/plugin-node-resolve": "^15.0.1",
		"@rollup/plugin-typescript": "^9.0.2",
		"@saekitominaga/urlsearchparams-custom-separator": "^1.0.1",
		"@types/basic-auth": "^1.1.3",
		"@types/compression": "^1.7.2",
		"@types/diff": "^5.0.2",
		"@types/ejs": "^3.1.1",
		"@types/express": "^4.17.14",
		"@types/github-slugger": "^1.3.0",
		"@types/jsdom": "^20.0.0",
		"@types/node": "^18.11.7",
		"@types/nodemailer": "^6.4.6",
		"@types/sharp": "^0.31.0",
		"@types/svgo": "^2.6.4",
		"@types/trusted-types": "^2.0.2",
		"@types/twitter": "^1.7.1",
		"@types/twitter-text": "^3.1.4",
		"@types/w3c-css-typed-object-model-level-1": "^20180410.0.4",
		"@types/xmlserializer": "^0.6.3",
		"@typescript-eslint/eslint-plugin": "^5.41.0",
		"@typescript-eslint/parser": "^5.41.0",
		"ajv-cli": "^5.0.0",
		"brotlin": "^1.1.0",
		"child_process": "^1.0.2",
		"cross-env": "^7.0.3",
		"cssnano": "^5.1.13",
		"cssnano-preset-lite": "^2.1.3",
		"eslint": "^8.26.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jsdoc": "^39.3.25",
		"globby": "^13.1.2",
		"highlight.js": "^11.6.0",
		"image-size": "^1.0.2",
		"jest": "^29.2.2",
		"jsdom": "^20.0.1",
		"json-schema-to-typescript": "^11.0.2",
		"kss": "^3.1.0",
		"markuplint": "^2.10.2",
		"nodemon": "^2.0.20",
		"npm-run-all": "^4.1.5",
		"onchange": "^7.1.0",
		"path": "^0.12.7",
		"postcss": "^8.4.18",
		"postcss-cli": "^10.0.0",
		"postcss-custom-media": "^8.0.2",
		"postcss-import": "^15.0.0",
		"postcss-media-minmax": "^5.0.0",
		"postcss-nesting": "^10.2.0",
		"prettier": "^2.7.1",
		"rollup": "^3.2.3",
		"rollup-plugin-terser": "^7.0.2",
		"stylelint": "^14.14.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-standard": "^29.0.0",
		"stylelint-order": "^5.0.0",
		"stylelint-prettier": "^2.0.0",
		"svgo": "^3.0.0",
		"typescript": "^4.8.4",
		"xml-formatter": "^2.6.1",
		"xpath": "^0.0.32"
	}
}
