{
	"name": "w0s.jp",
	"private": true,
	"workspaces": [
		"astro",
		"express"
	],
	"scripts": {
		"config": "run-p _config:*",
		"github-actions-lint": "yamllint .github/workflows/*.yml",
		"html-format": "prettier --config .prettierrc --write html/**/*.html html/**/*.ejs",
		"html-lint-ejs": "markuplint html/**/*.ejs views/_component/*.ejs views/_include/*.ejs",
		"_config:convert": "json2ts -i configure/schema -o configure/type",
		"_config:validate-astro": "ajv --spec=draft7 -s configure/schema/astro.json -d configure/astro.json",
		"_config:validate-express": "ajv --spec=draft7 -s configure/schema/express.json -d configure/express.json"
	},
	"devDependencies": {
		"@csstools/postcss-global-data": "^1.0.3",
		"@markuplint/ejs-parser": "^3.8.0",
		"@prettier/plugin-xml": "^2.2.0",
		"@rollup/plugin-node-resolve": "^15.0.2",
		"@rollup/plugin-terser": "^0.4.3",
		"@rollup/plugin-typescript": "^11.1.1",
		"@w0s/eslint-config": "^5.0.0",
		"@w0s/markuplint-config": "^2.5.0",
		"@w0s/stylelint-config": "^1.2.0",
		"@w0s/tsconfig": "^1.2.0",
		"ajv-cli": "^5.0.0",
		"brotli-cli": "^1.0.4",
		"cross-env": "^7.0.3",
		"cssnano": "^6.0.1",
		"cssnano-preset-lite": "^3.0.0",
		"eslint": "^8.45.0",
		"jest": "^29.5.0",
		"json-schema-to-typescript": "^13.0.1",
		"markuplint": "^3.11.0",
		"nodemon": "^2.0.22",
		"npm-run-all": "^4.1.5",
		"onchange": "^7.1.0",
		"postcss": "^8.4.23",
		"postcss-cli": "^10.1.0",
		"postcss-custom-media": "^9.1.3",
		"postcss-import": "^15.1.0",
		"postcss-media-minmax": "^5.0.0",
		"postcss-nesting": "^11.2.2",
		"prettier": "^3.0.0",
		"prettier-plugin-astro": "^0.11.0",
		"rollup": "^3.23.0",
		"stylelint": "^15.10.1",
		"stylelint-order": "^6.0.3",
		"typescript": "^5.0.4",
		"yaml-lint": "^1.7.0"
	}
}
