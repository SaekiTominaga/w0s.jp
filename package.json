{
	"name": "w0s.jp",
	"version": "1.0.0",
	"description": "w0s.jp",
	"author": "Saeki Tominaga",
	"type": "module",
	"scripts": {
		"app:dev": "nodemon --inspect --ignore public/ node/dist/app.js",
		"build": "tsc --project node/tsconfig.json",
		"build:watch": "tsc --project node/tsconfig.json -w",
		"config:tsconvert": "json2ts -i node/configure/schema -o node/configure/type",
		"config:validate:common": "ajv --spec=draft7 -s node/configure/schema/common.json -d node/configure/common.json",
		"config:validate:contact": "ajv --spec=draft7 -s node/configure/schema/contact.json -d node/configure/contact.json",
		"config:validate:amazon-ads": "ajv --spec=draft7 -s node/configure/schema/amazon-ads.json -d node/configure/amazon-ads.json",
		"config:validate:crawler-news": "ajv --spec=draft7 -s node/configure/schema/crawler-news.json -d node/configure/crawler-news.json",
		"config:validate:crawler-resource": "ajv --spec=draft7 -s node/configure/schema/crawler-resource.json -d node/configure/crawler-resource.json",
		"config:validate:blog-post": "ajv --spec=draft7 -s node/configure/schema/blog-post.json -d node/configure/blog-post.json",
		"config:validate:blog-amazon": "ajv --spec=draft7 -s node/configure/schema/blog-amazon.json -d node/configure/blog-amazon.json",
		"config:validate:tokyu-car-history": "ajv --spec=draft7 -s node/configure/schema/tokyu-car-history.json -d node/configure/tokyu-car-history.json",
		"config:validate:kumeta-twitter": "ajv --spec=draft7 -s node/configure/schema/kumeta-twitter.json -d node/configure/kumeta-twitter.json",
		"config:validate:madoka-official-news": "ajv --spec=draft7 -s node/configure/schema/madoka-official-news.json -d node/configure/madoka-official-news.json",
		"markuplint": "markuplint errorpage/*.html public/*.html public/admin/*.html public/madoka/**/*.html public/tokyu/**/*.html",
		"html-format": "prettier --config .prettierrc --write html/**/*.html",
		"_html-watch:build": "onchange -f add -f change -v html/**/*.html -- node build/html.mjs {{file}}",
		"_html-watch:compress": "onchange -f add -f change -v public/**/*.html --exclude public/styleguide/*.html -- brotlin compress {{file}} -m 1",
		"html-watch": "run-p _html-watch:*",
		"_html-all:build": "node build/html.mjs html/**/*.html",
		"_html-all:compress": "brotlin compress public/*.html -m 1",
		"_html-all:compress-admin": "brotlin compress public/admin/**/*.html -m 1",
		"_html-all:compress-madoka": "brotlin compress public/madoka/**/*.html -m 1",
		"_html-all:compress-tokyu": "brotlin compress public/tokyu/**/*.html -m 1",
		"html-all": "run-s _html-all:*",
		"_css:build-watch": "postcss public/assets/style/_src/*.css --base public/assets/style/_src -d public/assets/style -w",
		"_css:compress": "onchange -f add -f change -v public/assets/style/*.css -- brotlin compress {{file}} -m 1",
		"_css:kss": "onchange public/assets/style/*.css -- kss public/assets/style/_src public/styleguide -m *.css --css ../assets/style/styleguide.css --js ../assets/script/w0s.mjs --homepage public/assets/style/_src/styleguide.md --title w0s.jpスタイルガイド",
		"css": "run-p _css:*",
		"_js:build-watch": "webpack -w",
		"_js:compress": "onchange -f add -f change -v public/assets/script/*.js public/assets/script/*.mjs -- brotlin compress {{file}} -m 1",
		"js": "run-p _js:*",
		"_svg:build": "onchange -f add -f change -v image/**/*.svg -- node build/svg.mjs {{file}} svgo.config.cjs",
		"_svg:compress": "onchange -f add -f change -v public/**/*.svg -- brotlin compress {{file}} -m 1",
		"svg": "run-p _svg:*",
		"_feed:build": "node build/feed.mjs",
		"_feed:compress": "onchange -f add -f change -v public/**/*.atom -- brotlin compress {{file}} -m 1",
		"feed": "run-p _feed:*"
	},
	"dependencies": {
		"@log4js-node/smtp": "^2.0.1",
		"@saekitominaga/htmlconvert-anchor-host": "^1.0.0",
		"@saekitominaga/htmlconvert-time-japanese": "^1.0.1",
		"@saekitominaga/paapi-item-image-url-parser": "^2.1.2",
		"@saekitominaga/string-escape-html": "^1.0.2",
		"amazon-paapi": "^1.0.6",
		"basic-auth": "^2.0.1",
		"compression": "^1.7.4",
		"dayjs": "^1.10.7",
		"diff": "^5.0.0",
		"ejs": "^3.1.6",
		"express": "^4.17.2",
		"express-validator": "^6.14.0",
		"htpasswd-js": "^1.0.2",
		"log4js": "^6.4.1",
		"node-fetch": "^3.2.0",
		"nodemailer": "^6.7.2",
		"paapi5-typescript-sdk": "^0.2.0",
		"sqlite": "^4.0.23",
		"sqlite3": "^5.0.2",
		"twitter": "^1.7.1",
		"twitter-text": "^3.1.0"
	},
	"devDependencies": {
		"@markuplint/ejs-parser": "^2.0.0",
		"@prettier/plugin-xml": "^1.2.0",
		"@types/basic-auth": "^1.1.3",
		"@types/compression": "^1.7.2",
		"@types/diff": "^5.0.2",
		"@types/ejs": "^3.1.0",
		"@types/express": "^4.17.13",
		"@types/node": "^17.0.18",
		"@types/nodemailer": "^6.4.4",
		"@types/trusted-types": "^2.0.2",
		"@types/twitter": "^1.7.1",
		"@types/twitter-text": "^3.1.1",
		"@types/w3c-css-typed-object-model-level-1": "^20180410.0.4",
		"@typescript-eslint/eslint-plugin": "^5.12.0",
		"@typescript-eslint/parser": "^5.12.0",
		"@xmldom/xmldom": "^0.8.1",
		"ajv-cli": "^5.0.0",
		"brotlin": "^1.1.0",
		"child_process": "^1.0.2",
		"console-locale-timestamp": "^1.0.12",
		"cssnano": "^5.0.17",
		"eslint": "^8.9.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-jsdoc": "^37.9.1",
		"filelist": "1.0.2",
		"highlight.js": "^11.4.0",
		"json-schema-to-typescript": "^10.1.5",
		"kss": "^3.0.1",
		"markuplint": "^2.0.0",
		"nodemon": "^2.0.15",
		"npm-run-all": "^4.1.5",
		"onchange": "^7.1.0",
		"parse5": "^6.0.1",
		"path": "^0.12.7",
		"postcss": "^8.4.6",
		"postcss-cli": "^9.1.0",
		"postcss-custom-media": "^8.0.0",
		"postcss-import": "^14.0.2",
		"postcss-nesting": "^10.1.2",
		"prettier": "^2.5.1",
		"stylelint": "^14.5.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-standard": "^25.0.0",
		"stylelint-prettier": "^2.0.0",
		"svgo": "^2.8.0",
		"ts-loader": "^9.2.6",
		"typescript": "^4.5.5",
		"webpack": "^5.68.0",
		"webpack-cli": "^4.9.2",
		"xml-formatter": "^2.6.1",
		"xmlserializer": "^0.6.1",
		"xpath": "0.0.32"
	}
}
