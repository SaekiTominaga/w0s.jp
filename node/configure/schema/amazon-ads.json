{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://w0s.jp/amazon-ads.json",
	"type": "object",
	"title": "Amazon 商品広告管理",
	"required": ["view", "validator", "json_create"],
	"properties": {
		"view": {
			"type": "object",
			"title": "view ファイル名",
			"required": ["init"],
			"properties": {
				"init": {
					"type": "string",
					"title": "正常時"
				}
			},
			"additionalProperties": false
		},
		"validator": {
			"type": "object",
			"title": "バリデーター",
			"required": ["category"],
			"properties": {
				"category": {
					"type": "object",
					"title": "Eメールアドレス",
					"required": ["message"],
					"properties": {
						"message": {
							"type": "object",
							"title": "カテゴリー"
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		},
		"json_create": {
			"type": "object",
			"title": "JSON ファイル生成",
			"required": ["url_base", "url_base_dev"],
			"properties": {
				"url_base": {
					"type": "string",
					"title": "JSON ファイルを生成する URL (本番)"
				},
				"url_base_dev": {
					"type": "string",
					"title": "JSON ファイルを生成する URL (local)"
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
