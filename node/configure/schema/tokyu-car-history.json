{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://w0s.jp/tokyu-car-history.json",
	"type": "object",
	"title": "東急電車形態研究・車歴表",
	"required": ["view", "validator"],
	"properties": {
		"view": {
			"type": "object",
			"title": "view ファイル名",
			"required": ["init"],
			"properties": {
				"init": {
					"type": "string",
					"title": "初期画面"
				}
			},
			"additionalProperties": false
		},
		"validator": {
			"type": "object",
			"title": "バリデーター",
			"required": ["number", "register_start", "register_end"],
			"properties": {
				"number": {
					"type": "object",
					"title": "車号",
					"required": ["regexp", "message"],
					"properties": {
						"regexp": {
							"type": "string",
							"title": "正規表現"
						},
						"message": {
							"type": "object",
							"title": "メッセージ"
						}
					},
					"additionalProperties": false
				},
				"register_start": {
					"type": "object",
					"title": "入籍日　開始日",
					"required": ["message"],
					"properties": {
						"message": {
							"type": "object",
							"title": "メッセージ"
						}
					},
					"additionalProperties": false
				},
				"register_end": {
					"type": "object",
					"title": "入籍日　終了日",
					"required": ["message"],
					"properties": {
						"message": {
							"type": "object",
							"title": "メッセージ"
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
