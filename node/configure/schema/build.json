{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://w0s.jp/build.json",
	"type": "object",
	"title": "ビルド",
	"required": ["html", "feed"],
	"properties": {
		"html": {
			"type": "object",
			"required": [
				"book",
				"newspaper",
				"section_id",
				"toc",
				"localnav",
				"footnote",
				"anchor_type",
				"anchor_host",
				"anchor_amazon_associate",
				"heading_anchor",
				"time",
				"image",
				"image_amazon",
				"highlight"
			],
			"properties": {
				"book": {
					"type": "object",
					"title": "書籍",
					"required": ["target_element"],
					"properties": {
						"target_element": {
							"type": "string"
						}
					},
					"additionalProperties": false
				},
				"newspaper": {
					"type": "object",
					"title": "新聞",
					"required": ["target_element"],
					"properties": {
						"target_element": {
							"type": "string"
						}
					},
					"additionalProperties": false
				},
				"section_id": {
					"type": "object",
					"title": "セクション ID 自動生成",
					"required": ["heading_levels"],
					"properties": {
						"heading_levels": {
							"type": "array",
							"items": {
								"type": "number"
							}
						}
					},
					"additionalProperties": false
				},
				"toc": {
					"type": "object",
					"title": "目次自動生成",
					"required": ["target_element"],
					"properties": {
						"target_element": {
							"type": "string"
						},
						"class": {
							"type": "string"
						},
						"label": {
							"type": "string"
						}
					},
					"additionalProperties": false
				},
				"localnav": {
					"type": "object",
					"title": "ローカルナビ複製",
					"required": ["target_class"],
					"properties": {
						"target_class": {
							"type": "string"
						}
					},
					"additionalProperties": false
				},
				"footnote": {
					"type": "object",
					"title": "注釈",
					"required": ["trigger", "footnotes"],
					"properties": {
						"trigger": {
							"type": "object",
							"required": ["element", "class", "id_prefix", "attributes"],
							"properties": {
								"element": {
									"type": "string"
								},
								"class": {
									"type": "string"
								},
								"id_prefix": {
									"type": "string"
								},
								"attributes": {
									"type": "object",
									"patternProperties": {
										".": {
											"type": "string"
										}
									}
								},
								"parentheses_open": {
									"type": "string"
								},
								"parentheses_close": {
									"type": "string"
								}
							},
							"additionalProperties": false
						},
						"footnotes": {
							"type": "object",
							"required": ["element", "class", "no_class", "text_class", "id_prefix"],
							"properties": {
								"element": {
									"type": "string"
								},
								"class": {
									"type": "string"
								},
								"no_class": {
									"type": "string"
								},
								"text_class": {
									"type": "string"
								},
								"id_prefix": {
									"type": "string"
								}
							},
							"additionalProperties": false
						}
					},
					"additionalProperties": false
				},
				"anchor_type": {
					"type": "object",
					"title": "アイコン",
					"required": ["target_class", "insert_position", "parentheses", "icon", "icon_size", "icon_class"],
					"properties": {
						"target_class": {
							"type": "string"
						},
						"insert_position": {
							"type": "string",
							"enum": ["beforebegin", "afterbegin", "beforeend", "afterend"]
						},
						"parentheses": {
							"type": "object",
							"required": ["before", "after"],
							"properties": {
								"before": {
									"type": "string"
								},
								"after": {
									"type": "string"
								}
							},
							"additionalProperties": false
						},
						"icon": {
							"type": "array",
							"items": {
								"type": "object",
								"required": ["type", "name", "src"],
								"properties": {
									"type": {
										"type": "string",
										"title": "MIME タイプ"
									},
									"name": {
										"type": "string",
										"title": "リソースタイプ名"
									},
									"src": {
										"type": "string",
										"title": "アイコンパス"
									}
								},
								"additionalProperties": false
							},
							"uniqueItems": true,
							"title": "リソースタイプのアイコン情報"
						},
						"icon_size": {
							"type": "integer",
							"minimum": 0
						},
						"icon_class": {
							"type": "string"
						}
					},
					"additionalProperties": false
				},
				"anchor_host": {
					"type": "object",
					"title": "アイコン",
					"required": ["target_class", "insert_position", "parentheses", "element", "class", "icon", "icon_size", "icon_class"],
					"properties": {
						"target_class": {
							"type": "string"
						},
						"insert_position": {
							"type": "string",
							"enum": ["beforebegin", "afterbegin", "beforeend", "afterend"]
						},
						"parentheses": {
							"type": "object",
							"required": ["before", "after"],
							"properties": {
								"before": {
									"type": "string"
								},
								"after": {
									"type": "string"
								}
							},
							"additionalProperties": false
						},
						"element": {
							"type": "string"
						},
						"class": {
							"type": "string"
						},
						"icon": {
							"type": "array",
							"items": {
								"type": "object",
								"required": ["host", "name", "src"],
								"properties": {
									"host": {
										"type": "string",
										"title": "ホスト名"
									},
									"name": {
										"type": "string",
										"title": "サイト名"
									},
									"src": {
										"type": "string",
										"title": "アイコンパス"
									}
								},
								"additionalProperties": false
							},
							"uniqueItems": true,
							"title": "ホストのアイコン情報"
						},
						"icon_size": {
							"type": "integer",
							"minimum": 0
						},
						"icon_class": {
							"type": "string"
						}
					},
					"additionalProperties": false
				},
				"anchor_amazon_associate": {
					"type": "object",
					"title": "Amazon アソシエイトリンク",
					"required": ["target_class"],
					"properties": {
						"target_class": {
							"type": "string"
						}
					},
					"additionalProperties": false
				},
				"heading_anchor": {
					"type": "object",
					"title": "見出しセルフリンク",
					"required": ["target_class", "insert_position"],
					"properties": {
						"target_class": {
							"type": "string"
						},
						"insert_position": {
							"type": "string",
							"enum": ["beforebegin", "afterbegin", "beforeend", "afterend"]
						},
						"anchor_class": {
							"type": "string"
						}
					},
					"additionalProperties": false
				},
				"time": {
					"type": "object",
					"title": "time 要素",
					"required": ["target_class"],
					"properties": {
						"target_class": {
							"type": "string"
						}
					},
					"additionalProperties": false
				},
				"image": {
					"type": "object",
					"title": "画像",
					"required": ["target_class"],
					"properties": {
						"target_class": {
							"type": "string"
						}
					},
					"additionalProperties": false
				},
				"image_amazon": {
					"type": "object",
					"title": "Amazon 画像",
					"required": ["target_class"],
					"properties": {
						"target_class": {
							"type": "string"
						}
					},
					"additionalProperties": false
				},
				"highlight": {
					"type": "object",
					"title": "アイコン",
					"required": ["target_class", "class_prefix"],
					"properties": {
						"target_class": {
							"type": "string"
						},
						"class_prefix": {
							"type": "string"
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		},
		"feed": {
			"type": "object",
			"required": ["info"],
			"properties": {
				"info": {
					"type": "array",
					"items": {
						"type": "object",
						"required": ["html_path", "xpath", "feed_template", "feed_path"],
						"properties": {
							"html_path": {
								"type": "string",
								"title": "HTML ファイルパス"
							},
							"xpath": {
								"type": "object",
								"title": "XPath",
								"required": ["wrap", "date", "content"],
								"properties": {
									"wrap": {
										"type": "string",
										"title": "包括"
									},
									"date": {
										"type": "string",
										"title": "日付"
									},
									"content": {
										"type": "string",
										"title": "内容"
									}
								},
								"additionalProperties": false
							},
							"feed_template": {
								"type": "string",
								"title": "Feed テンプレートパス"
							},
							"feed_path": {
								"type": "string",
								"title": "Feed 出力パス"
							}
						},
						"additionalProperties": false
					},
					"uniqueItems": true,
					"title": "フィード情報"
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
