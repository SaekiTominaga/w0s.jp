{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://w0s.jp/crawler-resource.json",
	"type": "object",
	"title": "ウェブ巡回（リソース）",
	"required": ["log_dir", "diff", "view"],
	"properties": {
		"log_dir": {
			"type": "string",
			"title": "ログ格納ディレクトリ"
		},
		"diff": {
			"type": "object",
			"title": "差分表示",
			"required": ["max_line", "omit"],
			"properties": {
				"max_line": {
					"type": "integer",
					"minimum": 1,
					"title": "差分のない行の最大表示行数"
				},
				"omit": {
					"type": "string",
					"title": "省略文字"
				}
			},
			"additionalProperties": false
		},
		"view": {
			"type": "object",
			"title": "view ファイル名",
			"required": ["init", "log"],
			"properties": {
				"init": {
					"type": "string",
					"title": "初期画面"
				},
				"log": {
					"type": "string",
					"title": "ログ一覧画面"
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
