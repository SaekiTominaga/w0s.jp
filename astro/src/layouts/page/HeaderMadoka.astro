---
import HeaderSearch from '@components/header/Search.astro';
import HeaderSite from '@components/header/Site.astro';

interface Props {
	top?: boolean;
}

const { top = false } = Astro.props;
---

<header id="header" class="l-header">
	<div class="l-header__main">
		<div class="l-header__site">
			<HeaderSite top={top} href="/madoka/" name="まどか資料館" summary="『魔法少女まどか☆マギカ』の各種データやイベントレポートを紹介するサイト" />
		</div>
		<div class="l-header__utility">
			<div class="l-header__feed">
				<a href="/madoka/feed" type="application/atom+xml" class="c-button -feed">
					<img src="/assets/image/icon/feed.svg" alt="" width="16" height="16" class="c-button__icon" />
					<span class="c-button__text">新着フィード</span>
				</a>
			</div>
			<div class="l-header__search">
				<HeaderSearch />
			</div>
		</div>
	</div>
</header>
