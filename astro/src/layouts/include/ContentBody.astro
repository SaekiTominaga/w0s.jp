---
interface Props {
	html: string;
	footnoteData: { note: Map<number, string | undefined>; reference: Map<number, string | undefined> };
}

const { html, footnoteData } = Astro.props;
---

<div class="l-content__body">
	<Fragment set:html={html} />

	{
		footnoteData.note.size > 0 && (
			<section class="p-footnote">
				<h2 class="p-footnote__hdg">注釈</h2>

				<ul class="p-footnote__list">
					{[...footnoteData.note].map(([fnNo, fnHtml]) => (
						<li>
							<span class="p-footnote__no">{fnNo}.</span>
							<p class="p-footnote__content">
								<span id={`fn-note${fnNo}`} set:html={fnHtml} />
								<a href={`#fnref-note${fnNo}`} class="p-footnote__backref">
									↩ 戻る
								</a>
							</p>
						</li>
					))}
				</ul>
			</section>
		)
	}

	{
		footnoteData.reference.size > 0 && (
			<section class="p-footnote">
				<h2 class="p-footnote__hdg">参考文献</h2>

				<ul class="p-footnote__list">
					{[...footnoteData.reference].map(([fnNo, fnHtml]) => (
						<li>
							<span class="p-footnote__no">{fnNo}.</span>
							<p class="p-footnote__content">
								<span id={`fn-ref${fnNo}`} set:html={fnHtml} />
								<a href={`#fnref-ref${fnNo}`} class="p-footnote__backref">
									↩ 戻る
								</a>
							</p>
						</li>
					))}
				</ul>
			</section>
		)
	}
</div>
