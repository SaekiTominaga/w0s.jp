---
import type GithubSlugger from 'github-slugger';
import Lib, { dateDisplay } from './Lib.astro';

interface Props {
	slugger: GithubSlugger;
	headingLevel: number;
	title: string;
	release?: string;
	npClass?: string;
	tags?: string[];
}

const { slugger, headingLevel, title, release, npClass, tags } = Astro.props;

const id = slugger.slug([title, release, npClass].join(' ').trim());
---

<Lib id={id} headingLevel={headingLevel} title={[title, dateDisplay(release), npClass].join(' ').trim()} tags={tags}>
	<slot />
</Lib>
