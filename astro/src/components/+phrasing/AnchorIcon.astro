---
interface Props {
	fileName: string;
	alt?: string;
}

const { fileName, alt } = Astro.props;
---

<img src={`/assets/image/icon/${fileName}`} alt={alt !== undefined ? `(${alt})` : ''} width="16" height="16" class="link-icon" />

<style>
	@layer component {
		.link-icon {
			block-size: 1em;
			inline-size: auto;
			vertical-align: calc((1cap - 1em) / 2);
		}
	}
</style>
