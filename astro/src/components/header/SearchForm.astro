---
import SearchCtrl from '@components/SearchCtrl.astro';
---

<search role="search" aria-label="サイト">
	<form action="https://www.google.com/search" class="search-form">
		<fieldset>
			<legend class="legend">サイト内検索<small>（Google 検索）</small></legend>
			<div class="ctrl">
				<SearchCtrl />
			</div>
		</fieldset>
	</form>
</search>

<style>
	.search-form {
		display: block grid;
		grid-template-areas:
			'legend'
			'ctrl';
		gap: 0.25em;
		line-height: var(--line-height-narrow);

		& > :global(fieldset) {
			display: contents;
		}
	}

	.legend {
		grid-area: legend;
		font-size: calc(100% / pow(var(--font-ratio), 1));
		font-weight: var(--font-weight-bold);
	}

	.ctrl {
		grid-area: ctrl;
	}
</style>
