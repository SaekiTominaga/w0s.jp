---
import type GithubSlugger from 'github-slugger';
import Lib from './Lib.astro';

interface Props {
	slugger: GithubSlugger;
	headingLevel: number;
	title: string;
	release?: string;
	distribution?: string;
	tags?: string[];
	isbn?: string;
	amazonAsin?: string;
	amazonImageId?: string;
	amazonImageWidth?: number;
	amazonImageHeight?: number;
}

const { slugger, headingLevel, title, release, distribution, tags, isbn, amazonAsin, amazonImageId, amazonImageWidth, amazonImageHeight } = Astro.props;

const id = slugger.slug(title);
---

<Lib id={id} headingLevel={headingLevel} title={title} release={release} distribution={distribution} tags={tags} isbn={isbn} amazonAsin={amazonAsin} amazonImageId={amazonImageId} amazonImageWidth={amazonImageWidth} amazonImageHeight={amazonImageHeight}>
	<slot />
</Lib>
