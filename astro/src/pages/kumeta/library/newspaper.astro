---
import dayjs from 'dayjs';
import GithubSlugger from 'github-slugger';
import Layout from '@layouts/Kumeta.astro';
import Anchor from '@components/+phrasing/Anchor.astro';
import LibContent from '@components/LibContent.astro';
import LibItem from '@components/LibItem.astro';
import LibNewspaper from '@components/LibNewspaper.astro';
import List from '@components/List.astro';
import ListNote from '@components/ListNote.astro';
import Section from '@components/Section.astro';
import type { StructuredData } from '@type/types.js';

const structuredData: StructuredData = {
	title: '久米田康治作品の新聞での紹介例',
	heading: 'メディア紹介 — 新聞',
	dateModified: dayjs('2025-04-19'),
	description: '新聞紙上において久米田先生のインタビューや作品紹介などが掲載された事例のリストです。',
	breadcrumb: [{ path: '/kumeta/', name: '久米田康治データベース' }],
	localNav: {
		label: 'メディア紹介',
		items: [
			{ path: '/kumeta/library/manga', name: '漫画雑誌' },
			{ path: '/kumeta/library/book', name: '図書、一般雑誌' },
			{ path: '/kumeta/library/newspaper', name: '新聞' },
			{ path: '/kumeta/library/freepaper', name: 'フリーペーパー' },
			{ path: '/kumeta/library/web', name: 'Web' },
		],
	},
	tocDirection: 'row',
	moduleScripts: ['library-tag.mjs'],
};

const slugger = new GithubSlugger();
---

<Layout astroFilePath={Astro.self.moduleId} structuredData={structuredData}>
	<Section slugger={slugger}>
		<Fragment slot="heading">2002年</Fragment>

		<LibNewspaper slugger={slugger} headingLevel={3} title="読売新聞" release="2002-03-23" npClass="夕刊">
			<LibContent>
				<LibItem position="6面">「<cite>このギャグ笑える? 笑えない?</cite>」で『<cite>魁!!クロマティ高校</cite>』、『<cite>あずまんが大王</cite>』などと共に『<cite>かってに改蔵</cite>』が紹介、『<cite>魁!!クロマティ高校</cite>』と同じく<q>「笑えるヤツだけ笑えばよし」という開き直りが徹底</q>との評</LibItem>
			</LibContent>
		</LibNewspaper>
	</Section>

	<Section slugger={slugger}>
		<Fragment slot="heading">2006年</Fragment>

		<LibNewspaper slugger={slugger} headingLevel={3} title="朝日新聞" release="2006-04-16" npClass="朝刊">
			<LibContent>
				<LibItem position="14面">「<cite>ササキバラ・ゴウ　コミックガイド</cite>」にて『<cite>さよなら絶望先生</cite>』紹介<small>（<Anchor href="https://web.archive.org/web/20060426054235/http://book.asahi.com/comic/TKY200604190336.html">アサヒ・コムBOOK</Anchor>にも一時期掲載されていた）</small></LibItem>
			</LibContent>
		</LibNewspaper>
	</Section>

	<Section slugger={slugger}>
		<Fragment slot="heading">2007年</Fragment>

		<LibNewspaper slugger={slugger} headingLevel={3} title="読売新聞" release="2007-01-31" npClass="夕刊">
			<LibContent>
				<LibItem position="5面">「<cite>「鈴木先生」が話題　武富健治さん</cite>」教師作品の関連として『<cite>さよなら絶望先生</cite>』も紹介、第一話の<q>金ぎたない世の中に絶望した!!</q>のコマ掲載<small>（<Anchor href="https://web.archive.org/web/20070207123159/https://www.yomiuri.co.jp/book/news/20070131bk01.htm">YOMIURI ONLINE</Anchor>にも一時期掲載されていた）</small></LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="朝日新聞" release="2007-05-20" npClass="朝刊">
			<LibContent>
				<LibItem position="27面">「<cite>講談社漫画賞決まる</cite>」第31回講談社漫画賞の発表（『<cite>さよなら絶望先生</cite>』受賞）</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="新潟日報" release="2007-06-22" npClass="朝刊">
			<LibContent>
				<LibItem position="28面（県内総合）">「<cite>よい作品　今後も　講談社漫画賞　県出身2氏へ賞状</cite>」第31回講談社漫画賞授賞式の記事、久米田先生が壇上で小川悦司と矢神ひろきの間に立たれている写真が掲載（記事自体は県内出身の小川、矢神両先生の紹介であり久米田先生への言及はなし）</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="アニカン" release="2007-07-04" npClass="Vol.39 2007年7月号B" tags={['アニメ']}>
			<LibContent>
				<LibItem position="2面">アニメ『<cite>さよなら絶望先生</cite>』ポスター広告（モノクロ）</LibItem>
				<LibItem position="15面">アフレコインタビュー（井上麻里奈、神谷浩史、松来未祐、後藤邑子、小林ゆう、野中藍、新谷良子）</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="アニカン" release="2007-08-08" npClass="Vol.41 2007年8月号B" tags={['音楽']}>
			<LibContent>
				<LibItem position="29面">「<cite>人として軸がぶれている</cite>」大槻ケンヂインタビュー</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="アニカン" release="2007-08-29" npClass="Vol.42 2007年9月号" tags={['アニメ']}>
			<LibContent>
				<LibItem position="20面">「<cite>人として軸がぶれている</cite>」広告</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="アニカン" release="2007-09-21" npClass="Vol.43 2007年10月号A" tags={['インタビュー', 'アニメ']}>
			<LibContent>
				<LibItem position="1面">久米田康治&amp;神谷浩史対談</LibItem>
				<LibItem position="4–5面">久米田康治&amp;神谷浩史対談（1面の続き）</LibItem>
				<LibItem position="2面">「<cite>人として軸がぶれている</cite>」広告</LibItem>
			</LibContent>
		</LibNewspaper>
	</Section>

	<Section slugger={slugger}>
		<Fragment slot="heading">2008年</Fragment>

		<LibNewspaper slugger={slugger} headingLevel={3} title="アニカン" release="2008-01-02" npClass="Vol.49 2008年新年号" tags={['アニメ']}>
			<LibContent>
				<LibItem position="12–13面">『<cite>俗・さよなら絶望先生</cite>』広告</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="アニカン" release="2008-01-23" npClass="Vol.50 2008年2月号" tags={['アニメ']}>
			<LibContent>
				<LibItem position="13面">『<cite>俗・さよなら絶望先生</cite>』前田くんインタビュー</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="アニカン" npClass="Vol.51 2008年3月号" tags={['アニメ']}>
			<LibContent>
				<LibItem position="4面">『<cite>俗・さよなら絶望先生</cite>』広告（「<cite>マリオネット</cite>」ほか）</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="アニカン" release="2008-06-24" npClass="Vol.73 2009年7月号" tags={['アニメ']}>
			<LibContent>
				<LibItem position="6面">『<cite>懺・さよなら絶望先生</cite>』広告</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="アニカン" release="2008-07-15" npClass="Vol.74 2009年8月号" tags={['アニメ', '音楽']}>
			<LibContent>
				<LibItem position="10面">「<cite>林檎もぎれビーム</cite>」大槻ケンヂインタビュー</LibItem>
				<LibItem position="11面">『<cite>懺・さよなら絶望先生</cite>』神谷浩史インタビュー</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="アニカン" release="2008-08-19" npClass="Vol.75 2009年9月号" tags={['アニメ']}>
			<LibContent>
				<LibItem position="9面">『<cite>懺・さよなら絶望先生</cite>』広告</LibItem>
			</LibContent>
		</LibNewspaper>
	</Section>

	<Section slugger={slugger}>
		<Fragment slot="heading">2009年</Fragment>

		<LibNewspaper slugger={slugger} headingLevel={3} title="東京新聞" release="2009-01-01" npClass="朝刊">
			<LibContent>
				<LibItem position="第4部3面">「<cite>マンガ週刊誌　半世紀</cite>」のすごろくで2005年のコマに『<cite>さよなら絶望先生</cite>』『<cite>最強! 都立あおい坂高校野球部</cite>』の作品名が掲載</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="中日新聞" release="2009-02-10" npClass="夕刊">
			<LibContent>
				<LibItem position="10面">「<cite>らっぷびと　動画サイトでアクセス殺到</cite>」で『<cite>さよなら絶望先生</cite>』の楽曲にも言及</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="東京新聞" release="2009-03-16" npClass="朝刊">
			<LibContent>
				<LibItem position="13面">「<cite>動画サイトからデビュー『らっぷびと』</cite>」で『<cite>さよなら絶望先生</cite>』の楽曲にも言及</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="読売新聞（島根版）" release="2009-03-19" npClass="朝刊">
			<LibContent>
				<LibItem position="32面（地域）">「<cite>私のお薦め</cite>」で松江農林高教諭による『<cite>さよなら絶望先生</cite>』紹介</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="アニカンR" release="2009-07-01" npClass="Vol.23" tags={['アニメ']}>
			<LibContent>
				<LibItem position="8面">『<cite>懺・さよなら絶望先生</cite>』神谷浩史インタビュー</LibItem>
			</LibContent>
		</LibNewspaper>
	</Section>

	<Section slugger={slugger}>
		<Fragment slot="heading">2010年</Fragment>

		<LibNewspaper slugger={slugger} headingLevel={3} title="アニカンR" release="2010-04-28" npClass="Vol.43" tags={['ラジオ']}>
			<LibContent>
				<LibItem>「<cite>神谷浩史のオールナイトニッポンR</cite>」特集</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="日本経済新聞" release="2010-05-23" npClass="朝刊">
			<LibContent>
				<LibItem position="20面">「<cite>半歩遅れの読書術</cite>」（明治大学教授・高山宏）で逆説的世界観の事例として『<cite>さよなら絶望先生</cite>』が紹介</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="埼玉新聞" release="2010-06-27">
			<LibContent>
				<LibItem position="10面">「<cite>山村高淑のサブカルサプリ</cite>」で『<cite>かってに改蔵</cite>』が紹介、埼玉県内の舞台設定に言及</LibItem>
			</LibContent>

			<ListNote>
				<li>著者の所属する北海道大学のサイトで<Anchor href="https://hdl.handle.net/2115/53071">紙面が公開</Anchor>。</li>
			</ListNote>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="読売新聞" release="2010-06-28" npClass="夕刊">
			<LibContent>
				<LibItem position="11面">「<cite>伝統芸能と「萌え」の新世界</cite>」で『<cite>國崎出雲の事情</cite>』など他作品と混じって『<cite>じょしらく</cite>』が紹介、担当・三浦敏宏コメント、一日目3ページ目<q>音だったら犬より猫でしょう</q>のカット掲載</LibItem>
			</LibContent>
		</LibNewspaper>
	</Section>

	<Section slugger={slugger}>
		<Fragment slot="heading">2011年</Fragment>

		<LibNewspaper slugger={slugger} headingLevel={3} title="アニカンR" release="2011-06-01" npClass="Vol.129" tags={['アニメ']}>
			<LibContent>
				<LibItem>OVA『<cite>かってに改蔵</cite>』特集、櫻井孝宏5000字インタビュー</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="読売新聞" release="2011-09-14" npClass="夕刊 POPSTYLE Vol.265">
			<LibContent>
				<LibItem position="8–9面">赤松健×畑健二郎の対談の中で「毎回アフレコに行っていた」「女性声優と飲みに行った」などの話が挙がる</LibItem>
			</LibContent>

			<ListNote>
				<li><Anchor href="http://blog.yomiuri.co.jp/popstyle/2011/09/post-2d6d.html">popstyle ブログでの紹介</Anchor>。</li>
			</ListNote>
		</LibNewspaper>
	</Section>

	<Section slugger={slugger}>
		<Fragment slot="heading">2012年</Fragment>

		<LibNewspaper slugger={slugger} headingLevel={3} title="朝日新聞" release="2012-01-26" npClass="夕刊">
			<LibContent>
				<LibItem position="5面">「<cite>小池龍之介の心を保つお稽古</cite>」で『<cite>さよなら絶望先生</cite>』第7集紙ブログにおける宅配便を優先されて約束を反故にされたネタが紹介</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="アニカン" release="2012-06-20" npClass="Vol.109 2012年7月号" tags={['アニメ']}>
			<LibContent>
				<LibItem position="23面">『<cite>じょしらく</cite>』水島努インタビュー</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="山形新聞" release="2012-11-24">
			<LibContent>
				<LibItem position="7面">「<cite>ことばの杜へ</cite>」で『<cite>さよなら絶望先生</cite>』第四十話「<cite>人生は一段のひな壇にも若かない</cite>」での望のセリフ<q>人間　上ばかり見ていては　自分の限界を感じた時　空しいだけです　世の中　上に伸びる段だけじゃないのです!</q>を引用しつつ、社会問題としての自殺についての言説</LibItem>
			</LibContent>
		</LibNewspaper>
	</Section>

	<Section slugger={slugger}>
		<Fragment slot="heading">2015年</Fragment>

		<LibNewspaper slugger={slugger} headingLevel={3} title="読売新聞" release="2015-07-27" npClass="夕刊">
			<LibContent>
				<LibItem position="6面">村田沙耶香（作家）による漫画作品のヒロイン紹介で名取羽美が取り上げられる</LibItem>
			</LibContent>
		</LibNewspaper>

		<LibNewspaper slugger={slugger} headingLevel={3} title="熊本日日新聞" release="2015-11-11">
