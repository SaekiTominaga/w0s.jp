---
import dayjs from 'dayjs';
import GithubSlugger from 'github-slugger';
import Layout from '@layouts/Kumeta.astro';
import Anchor from '@components/+phrasing/Anchor.astro';
import LibBook from '@components/LibBook.astro';
import LibContent from '@components/LibContent.astro';
import LibItem from '@components/LibItem.astro';
import ListNote from '@components/ListNote.astro';
import Section from '@components/Section.astro';
import type { StructuredData } from '@type/types.js';

const structuredData: StructuredData = {
	title: '久米田康治作品のフリーペーパーでの紹介例',
	heading: 'メディア紹介 — フリーペーパー',
	dateModified: dayjs('2024-10-13'),
	description: 'フリーペーパーにおいて久米田先生のインタビューや作品紹介などが掲載された事例のリストです。',
	breadcrumb: [{ path: '/kumeta/', name: '久米田康治データベース' }],
	localNav: {
		label: 'メディア紹介',
		items: [
			{ path: '/kumeta/library/manga', name: '漫画雑誌' },
			{ path: '/kumeta/library/book', name: '図書、一般雑誌' },
			{ path: '/kumeta/library/newspaper', name: '新聞' },
			{ path: '/kumeta/library/freepaper', name: 'フリーペーパー' },
			{ path: '/kumeta/library/web', name: 'Web' },
		],
	},
	tocDirection: 'row',
	moduleScripts: ['library-tag.mjs'],
};

const slugger = new GithubSlugger();
---

<Layout astroFilePath={Astro.self.moduleId} structuredData={structuredData}>
	<Section slugger={slugger}>
		<Fragment slot="heading">2003年</Fragment>

		<LibBook slugger={slugger} headingLevel={3} title="きゃらびぃ Vol.70" distribution="2003-12-01">
			<LibContent>
				<LibItem pages={[38]}>アニメイト『<cite>かってに改蔵</cite>』フェア情報</LibItem>
			</LibContent>
		</LibBook>

		<LibBook slugger={slugger} headingLevel={3} title="きゃらびぃ Vol.71" distribution="2003-12-15">
			<LibContent>
				<LibItem pages={[37]}>アニメイト『<cite>かってに改蔵</cite>』フェア情報</LibItem>
			</LibContent>
		</LibBook>
	</Section>

	<Section slugger={slugger}>
		<Fragment slot="heading">2007年</Fragment>

		<LibBook slugger={slugger} headingLevel={3} title="A-STATION 2007年8月号" distribution="2007-07-30" tags={['アニメ']}>
			<LibContent>
				<LibItem pages={[11]}>アニメ『<cite>さよなら絶望先生</cite>』紹介</LibItem>
			</LibContent>
		</LibBook>

		<LibBook slugger={slugger} headingLevel={3} title="スタチャマニア？！ Vol.13 夏号" distribution="2007-08-17" tags={['アニメ']}>
			<LibContent>
				<LibItem position="表紙">『<cite>さよなら絶望先生</cite>』</LibItem>
				<LibItem pages={[1, 4]}>『<cite>さよなら絶望先生</cite>』非公式アニメコミック、キャストインタビュー</LibItem>
			</LibContent>
		</LibBook>

		<LibBook slugger={slugger} headingLevel={3} title="きゃらびぃ Vol.160" distribution="2007-09-05" tags={['アニメ']}>
			<LibContent>
				<LibItem pages={[4, 6]}>『<cite>さよなら絶望先生</cite>』神谷浩史、野中藍、新房昭之インタビュー</LibItem>
			</LibContent>
		</LibBook>

		<LibBook slugger={slugger} headingLevel={3} title="スタチャマニア？！ Vol.14 秋号" distribution="2007-10-20" tags={['アニメ']}>
			<LibContent>
				<LibItem pages={[8]}>『<cite>さよなら絶望先生</cite>』非公式アニメコミック第二話</LibItem>
			</LibContent>
		</LibBook>

		<LibBook slugger={slugger} headingLevel={3} title="きゃらびぃ Vol.167" distribution="2007-12-20" tags={['アニメ']}>
			<LibContent>
				<LibItem pages={[7]}>『<cite>俗・さよなら絶望先生</cite>』放送情報</LibItem>
			</LibContent>
		</LibBook>

		<LibBook slugger={slugger} headingLevel={3} title="スタチャマニア？！ Vol.15 冬号" distribution="2007-12-29" tags={['アニメ']}>
			<LibContent>
				<LibItem position="表紙">『<cite>俗・さよなら絶望先生</cite>』</LibItem>
				<LibItem pages={[1, 3]}>『<cite>さよなら絶望先生</cite>』非公式アニメコミック第三話、『<cite>俗・さよなら絶望先生</cite>』放送直前レビュー、『<cite>さよなら絶望先生　序〜絶望少女撰集〜</cite>』紹介記事</LibItem>
			</LibContent>
		</LibBook>
	</Section>

	<Section slugger={slugger}>
		<Fragment slot="heading">2008年</Fragment>

		<LibBook slugger={slugger} headingLevel={3} title="スタチャマニア？！ Vol.17 夏号" distribution="2008-08-15" tags={['アニメ']}>
			<LibContent>
				<LibItem pages={[10]}>『<cite>さよなら絶望先生　序〜俗・絶望少女撰集〜</cite>』DVD 広告</LibItem>
			</LibContent>
		</LibBook>

		<LibBook slugger={slugger} headingLevel={3} title="スタチャマニア？！ Vol.18 秋号" distribution="2008-10-19" tags={['アニメ']}>
			<LibContent>
				<LibItem pages={[13]}>『<cite>獄・さよなら絶望先生</cite>』紹介記事</LibItem>
			</LibContent>
		</LibBook>
	</Section>

	<Section slugger={slugger}>
		<Fragment slot="heading">2009年</Fragment>

		<LibBook slugger={slugger} headingLevel={3} title="スタチャマニア？！ Vol.21 夏号" distribution="2009-08-14" tags={['アニメ']}>
			<LibContent>
				<LibItem position="表紙">『<cite>懺・さよなら絶望先生</cite>』</LibItem>
				<LibItem pages={[1, 4]}>『<cite>懺・さよなら絶望先生</cite>』新房昭之インタビュー、非公式アニメコミック第四話、大槻ケンヂインタビュー</LibItem>
			</LibContent>

			<ListNote>
				<li><Anchor href="https://web.archive.org/web/20231130051748/https://king-cr.jp/mania/">Web版 スタチャマニア？！</Anchor>で公開。</li>
			</ListNote>
		</LibBook>

		<LibBook slugger={slugger} headingLevel={3} title="スタチャマニア？！ Vol.23 冬号" distribution="2009-12-29" tags={['アニメ']}>
			<LibContent>
				<LibItem pages={[16]}>『<cite>懺・さよなら絶望先生</cite>』DVD 広告</LibItem>
			</LibContent>

			<ListNote>
				<li><Anchor href="https://web.archive.org/web/20231130051748/https://king-cr.jp/mania/">Web版 スタチャマニア？！</Anchor>で公開。</li>
			</ListNote>
		</LibBook>
	</Section>

	<Section slugger={slugger}>
		<Fragment slot="heading">2011年</Fragment>

		<LibBook slugger={slugger} headingLevel={3} title="スタチャマニア？！ 2011 Spring Vol.28" distribution="2011" tags={['アニメ']}>
			<LibContent>
				<LibItem pages={[27]}>『<cite>かってに改蔵</cite>』OVA 広告、キャストメッセージ（櫻井孝宏、喜多村英梨、堀江由衣）</LibItem>
				<LibItem pages={[28]}>『<cite>さよなら絶望先生</cite>』Blu-ray BOX 広告</LibItem>
			</LibContent>
		</LibBook>
	</Section>

	<Section slugger={slugger}>
		<Fragment slot="heading">2012年</Fragment>

		<LibBook slugger={slugger} headingLevel={3} title="きゃらびぃTV Vol.8" distribution="2012-06-10" tags={['アニメ']}>
			<LibContent>
				<LibItem>アニメ『<cite>じょしらく</cite>』キャラクター紹介など</LibItem>
			</LibContent>
		</LibBook>

		<LibBook slugger={slugger} headingLevel={3} title="アニメ『じょしらく』小冊子" distribution="2012-06-30" tags={['アニメ', 'インタビュー']}>
			<LibContent>
				<LibItem>壱：作品内容。</LibItem>
				<LibItem>弐：登場人物。</LibItem>
				<LibItem>参：制作陣・出演者ノ言葉。（久米田康治、ヤス、水島努、佐倉綾音、山本希望、小岩井ことり、南條愛乃、後藤沙緒里）</LibItem>
			</LibContent>

			<ListNote>
				<li>2012年6月30日、7月1日に秋葉原で行われた<Anchor href="https://king-cr.jp/special/joshiraku/news/news02.html">無料配布イベント2DAYS</Anchor>で配布。</li>
			</ListNote>
		</LibBook>

		<LibBook slugger={slugger} headingLevel={3} title="声優きゃらびぃ Vol.7" distribution="2012-08-10" tags={['アニメ']}>
			<LibContent>
				<LibItem pages={[8, 9]}>佐倉綾音インタビュー</LibItem>
			</LibContent>
		</LibBook>

		<LibBook slugger={slugger} headingLevel={3} title="週刊アスキー秋葉原限定版 2012年9月号" distribution="2012-08-31" tags={['アニメ']}>
			<LibContent>
				<LibItem pages={[32, 33]}>『<cite>じょしらく</cite>』山本希望×小岩井ことりインタビュー</LibItem>
			</LibContent>

			<ListNote>
				<li><Anchor href="https://weekly.ascii.jp/elem/000/002/611/2611297/">紹介ページ</Anchor></li>
			</ListNote>
		</LibBook>
	</Section>

	<Section slugger={slugger}>
		<Fragment slot="heading">2017年</Fragment>

		<LibBook slugger={slugger} headingLevel={3} title="きゃらびぃ Vol.392" distribution="2017-05-05" tags={['描き下ろし']}>
			<LibContent>
				<LibItem pages={[28, 35]}>アニメ店長トリビュート第6回『<cite>かくしごと</cite>』×『<cite>アニメ店長</cite>』描き下ろし漫画</LibItem>
			</LibContent>
		</LibBook>
	</Section>

	<Section slugger={slugger}>
		<Fragment slot="heading">2020年</Fragment>

		<LibBook slugger={slugger} headingLevel={3} title="きゃらびぃ Vol.457" distribution="2020-01-20" tags={['アニメ']}>
			<LibContent>
				<LibItem pages={[39]}>『<cite>かくしごと</cite>』TV アニメ情報</LibItem>
			</LibContent>
		</LibBook>
	</Section>

	<Section slugger={slugger}>
		<Fragment slot="heading">2022年</Fragment>

		<LibBook slugger={slugger} headingLevel={3} title="異質力奇譚" distribution="2020-03" tags={['描き下ろし']}>
			<LibContent>
				<LibItem>6ページの大学紹介漫画</LibItem>
			</LibContent>

			<ListNote>
				<li>和光大学の冊子（オープンキャンパス等で配布）</li>
			</ListNote>
		</LibBook>
	</Section>

	<Section slugger={slugger}>
		<Fragment slot="heading">2023年</Fragment>

		<LibBook slugger={slugger} headingLevel={3} title="WAKO UNIVERSITY 2024" distribution="2023-05" tags={['描き下ろし', 'インタビュー']}>
			<LibContent>
				<LibItem position="表紙&裏表紙">描き下ろしイラスト</LibItem>
				<LibItem pages={[5, 6]}>久米田康治インタビュー</LibItem>
			</LibContent>

			<ListNote>
				<li>和光大学の2024年度大学案内（オープンキャンパス等で配布）</li>
				<li>表紙イラストは<Anchor href="https://x.com/wako_nyushi/status/1657251955780247554">和光大学入試広報課の X 投稿</Anchor>で公開</li>
				<li>掲載のインタビューは<Anchor href="https://www.wako.ac.jp/about/point/graduate/003.html">大学の Web サイトで公開されているインタビュー</Anchor>とは異なる（「<cite>5つの質問</cite>」は同一）</li>
			</ListNote>
		</LibBook>
	</Section>

	<Section slugger={slugger}>
		<Fragment slot="heading">2024年</Fragment>

		<LibBook slugger={slugger} headingLevel={3} title="GCLマガジン（ゲームクリエイターズラボマガジン）" distribution="2024-09-26" tags={['描き下ろし', 'インタビュー']}>
			<LibContent>
				<LibItem position="表紙&裏表紙">描き下ろしイラスト</LibItem>
				<LibItem pages={[2, 5]}>久米田康治×ところにょり特別対談</LibItem>
				<LibItem pages={[6, 7]}>『<cite>違う冬のぼくら</cite>』紹介、イラスト掲載</LibItem>
			</LibContent>

			<ListNote>
				<li><Anchor href="https://tgs.nikkeibp.co.jp/tgs/2024/jp/">東京ゲームショウ2024</Anchor> の「講談社ゲームクリエイターズラボ」ブースで配布</li>
				<li>表紙イラストは<Anchor href="https://creatorslab.kodansha.co.jp/topics/2673/">プレスリリース</Anchor>で公開</li>
			</ListNote>
		</LibBook>
	</Section>
</Layout>
