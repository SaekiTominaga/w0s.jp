---
import dayjs from 'dayjs';
import Layout from '@layouts/Tokyu.astro';
import Set from '@components/tokyu/Set.astro';
import SetPanel from '@components/tokyu/SetPanel.astro';
import ListNote from '@components/ListNote.astro';
import type { StructuredData } from '@type/types.js';

const structuredData: StructuredData = {
	title: '設定器配列　東急大井町線　9000系（2012年〜）',
	heading: '大井町線　9000系',
	subHeading: '2012年〜',
	dateModified: dayjs('2019-04-29'),
	breadcrumb: [
		{ path: '/tokyu/', name: '東急電車資料室' },
		{ path: '/tokyu/set/', name: '設定器配列' },
	],
	localNav: {
		label: '大井町線9000系、8590系の設定器バリエーション',
		items: [
			{ path: '/tokyu/set/9000_oimachi_2000', name: '2000年〜2009年（9000系）' },
			{ path: '/tokyu/set/8590_oimachi_2005', name: '2005年〜2009年（8590系）' },
			{ path: '/tokyu/set/9000_oimachi_2009-04', name: '2009年暫定' },
			{ path: '/tokyu/set/9000_oimachi_2009-07', name: '2009年〜2013年' },
			{ path: '/tokyu/set/9000_oimachi_2012', name: '2012年〜' },
		],
	},
};
---

<Layout astroFilePath={Astro.self.moduleId} structuredData={structuredData} toc={false}>
	<Set period="2012年に始まったタッチパネル式への更新から" invDate="2012-03-04" invCar="クハ9108">
		<SetPanel image="9000_oimachi_2012.svg" imageWidth={528} imageHeight={1170}>
			<section>
				<h2>始発駅</h2>

				<table>
					<tbody>
						<tr>
							<td>大井町</td>
							<td>溝の口</td>
							<td>大岡山</td>
							<td>自由が丘</td>
						</tr>
						<tr>
							<td>中央林間</td>
							<td>長津田</td>
							<td>鷺沼</td>
							<td>梶が谷</td>
						</tr>
						<tr>
							<td>二子玉川</td>
							<td>あざみ野</td>
							<td></td>
							<td></td>
						</tr>
					</tbody>
				</table>
			</section>

			<section>
				<h2>種別</h2>

				<table>
					<tbody>
						<tr>
							<td>B各停</td>
							<td>急行</td>
							<td>G各停</td>
							<td>訓練車</td>
						</tr>
						<tr>
							<td>貸切</td>
							<td>回送</td>
							<td>臨時</td>
							<td>試運転</td>
						</tr>
					</tbody>
				</table>
			</section>

			<section>
				<h2>行先</h2>

				<table>
					<tbody>
						<tr>
							<td>大井町</td>
							<td>溝の口</td>
							<td>大岡山</td>
							<td>自由が丘</td>
						</tr>
						<tr>
							<td>中央林間</td>
							<td>長津田</td>
							<td>鷺沼</td>
							<td>梶が谷</td>
						</tr>
						<tr>
							<td>二子玉川</td>
							<td>あざみ野</td>
							<td></td>
							<td></td>
						</tr>
					</tbody>
				</table>
			</section>
		</SetPanel>
	</Set>

	<ListNote>
		<li>2019年4月26日、9020系も駅名・種別は同じ内容であることを複数の車両で確認。<small>（<q>状態画面</q>の右側に<q>自動放送</q>ボタンが配置されている違いはある）</small></li>
		<li>2019年4月29日、9000系の複数の車両で変更がないことを確認。</li>
	</ListNote>
</Layout>
