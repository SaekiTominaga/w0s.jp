	<Section id="vf-hr107">
		<Fragment slot="heading">VF-HR107<small>（9000系1次車）</small></Fragment>

		<Flex>
			<FlexItem>
				<Embedded border={true} captionMeta={true}>
					<Image path="tokyu/machine/cont/VF-HR107_9301.jpg" alt="写真拡大" width={485} height={243} quality={60} link={true} slot="media" />
					<!-- 撮影日: 2009-03-28 -->
