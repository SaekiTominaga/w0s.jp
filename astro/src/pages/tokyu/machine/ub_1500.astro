---
import dayjs from 'dayjs';
import Layout from '@layouts/Tokyu.astro';
import Embedded from '@components/Embedded.astro';
import Grid from '@components/Grid.astro';
import GridItem from '@components/GridItem.astro';
import Image from '@components/+phrasing/Image.astro';
import Section from '@components/Section.astro';
import type { StructuredData } from '../../../../@types/util.d.ts';

const structuredData: StructuredData = {
	title: '東急1000系1500番台　床下機器配置',
	heading: '1000系1500番台　床下機器配置',
	dateModified: dayjs('2019-07-25'),
	description: '東急池上線、多摩川線で活躍する1000系1500番台の床下機器配置を写真で紹介します。',
	image: 'https://media.w0s.jp/image/tokyu/machine/ub/1600_sea.jpg',
	breadcrumb: [
		{ path: '/tokyu/', name: '東急電車資料室' },
		{ path: '/tokyu/machine/', name: '車両機器' },
	],
	localNav: {
		label: '床下機器配置',
		items: [
			{ path: '/tokyu/machine/ub_7600', name: '7600系' },
			{ path: '/tokyu/machine/ub_7700', name: '7700系' },
			{ path: '/tokyu/machine/ub_7700n', name: '7915F' },
			{ path: '/tokyu/machine/ub_1000n', name: '1000N系池多' },
			{ path: '/tokyu/machine/ub_1000n2', name: '1000N′系' },
			{ path: '/tokyu/machine/ub_1500', name: '1000系1500番台' },
		],
	},
};
---

<Layout astroFilePath={Astro.self.moduleId} structuredData={structuredData}>
	<Section id="mc-1500">
		<Fragment slot="heading">デハ1500形（台車間）</Fragment>

		<Grid column="wide" headingType="c">
			<GridItem>
				<Section id="mc-1500-sea" depth={2} headingType="c">
					<Fragment slot="heading">海側</Fragment>

					<Embedded border={true} captionMeta={true}>
						<Image path="tokyu/machine/ub/1500_sea.jpg" alt="写真拡大" width={485} height={152} quality={60} link={true} slot="media" />
						<!-- 2019-04-29 -->
						<Fragment slot="caption">デハ1501海側</Fragment>
					</Embedded>

					<p>主な機器は下り方から順に、蓄電池、定位置停止支援装置（TASC）、共通機器箱、空気圧縮機（HS-20型）、CP起動装置、主幹指令装置、情報伝送装置です。</p>
				</Section>
			</GridItem>
			<GridItem>
				<Section id="mc-1500-mount" depth={2} headingType="c">
					<Fragment slot="heading">山側</Fragment>

					<Embedded border={true} captionMeta={true}>
						<Image path="tokyu/machine/ub/1500_mount.jpg" alt="写真拡大" width={485} height={152} quality={60} link={true} slot="media" />
						<!-- 2019-04-29 -->
						<Fragment slot="caption">デハ1501山側</Fragment>
					</Embedded>

					<p>主な機器は下り方から順に、冷房制御装置、整流装置、元空気だめ、ブレーキ制御装置です。</p>
				</Section>
			</GridItem>
		</Grid>
	</Section>

	<Section id="m-1600">
		<Fragment slot="heading">デハ1600形（台車間）</Fragment>

		<Grid column="wide" headingType="c">
			<GridItem>
				<Section id="m-1600-sea" depth={2} headingType="c">
