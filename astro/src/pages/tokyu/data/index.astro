---
import dayjs from 'dayjs';
import GithubSlugger from 'github-slugger';
import Layout from '@layouts/Tokyu.astro';
import Section from '@components/Section.astro';
import type { StructuredData } from '../../../types/types.js';

const structuredData: StructuredData = {
	type: 'website',
	title: '東急電車の車両データ',
	heading: '車両データ',
	dateModified: dayjs('2023-04-09'),
	description: '東急電鉄の車両の車歴や編成などを図や表形式で紹介します。',
	breadcrumb: [{ path: '/tokyu/', name: 'ホーム' }],
};

const slugger = new GithubSlugger();
---

<Layout structuredData={structuredData}>
	<div class="c-grid -hdg-a -wide">
		<div class="c-grid__item">
			<Section slugger={slugger} id="car" heading="車両">
				<ul class="p-links">
					<li><a href="history/">車歴表</a>（2010年3月）</li>
					<li><a href="preservation">保存車両リスト</a>（2019年10月）</li>
				</ul>
			</Section>
		</div>
		<div class="c-grid__item">
			<Section slugger={slugger} id="form" heading="編成表">
				<ul class="p-links">
					<li><a href="form_car">主要機器搭載表（車種別）</a>（2009年3月）</li>
					<li><a href="form_line">主要機器搭載表（路線別）</a>（2009年3月）</li>
					<li><a href="form_local">譲渡車両編成表</a>（2020年2月）</li>
				</ul>
			</Section>
		</div>
		<div class="c-grid__item">
			<Section slugger={slugger} id="list" heading="機器一覧">
				<ul class="p-links">
					<li><a href="siv_8500">8500系　大容量 SIV 形式一覧</a>（2005年2月）</li>
					<li><a href="acu_8500">8500系後期車　冷房配置バリエーション</a>（2022年7月）</li>
					<li><a href="acu_9000">9000系　冷房配置バリエーション</a>（2018年12月）</li>
					<li><a href="truck_300">300系　台車製造年一覧</a>（2023年4月）</li>
				</ul>
			</Section>
		</div>
	</div>
</Layout>
