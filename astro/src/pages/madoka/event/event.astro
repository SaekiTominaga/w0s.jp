---
import GithubSlugger from 'github-slugger';
import Layout from '@layouts/Madoka.astro';
import Section from '@components/Section.astro';
import type { StructuredData } from '@type/types.js';

const structuredData: StructuredData = {
	title: '魔法少女まどか☆マギカ展',
	description: '2011年〜2014年に行われた「魔法少女まどか☆マギカ展」の開催情報をまとめました。',
	breadcrumb: [{ path: '/madoka/', name: 'ホーム' }],
};

const slugger = new GithubSlugger();
---

<Layout astroFilePath={Astro.self.moduleId} structuredData={structuredData}>
	<Section slugger={slugger} id="event" heading="魔法少女まどか☆マギカ展">
		<table class="p-table">
			<thead>
				<tr>
					<th scope="col">地域</th>
					<th scope="col" aria-sort="ascending">期間</th>
					<th scope="col">場所</th>
					<th scope="col">紹介サイト</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<th scope="row">池袋</th>
					<td>2011年12月27日(火)〜12月31日(土)</td>
					<td>サンシャインシティ 文化会館2階 Dホール</td>
					<td>
						<ul>
							<li><a href="https://web.archive.org/web/20120108065131/http://www.mpsinc.co.jp/madoka-magica-event/outline/tokyo.html">公式ページ</a></li>
							<li><a href="http://ascii.jp/elem/000/000/659/659217/">ASCII.jp</a></li>
							<li><a href="http://aug333.blog75.fc2.com/blog-entry-476.html">ちょっと気になっただけです。</a></li>
							<li><a href="http://aterahira.seesaa.net/article/243273673.html">あてらひら♪</a></li>
						</ul>
