---
import fs from 'node:fs';
import { diffLines, type Change as DiffChange } from 'diff';
import { format, type Options as PrettierOptions } from 'prettier';
import { env } from '@w0s/env-value-type';
import Layout from '@layouts/Admin.astro';
import Label from '@components/+phrasing/Label.astro';
import SubmitButton from '@components/+phrasing/SubmitButton.astro';
import CrawlerDiff from '@components/admin/CrawlerDiff.astro';
import CrawlerDiffLine from '@components/admin/CrawlerDiffLine.astro';
import type { StructuredData } from '../../../../@types/util.d.ts';

export const prerender = false;
const { logger, requestParams } = Astro.locals;

const structuredData: StructuredData = {
	title: 'ウェブ巡回（リソース差分）',
	breadcrumb: [{ path: '/admin/crawler-resource/', name: 'ウェブ巡回（リソース）' }],
};

const requestParamDir = requestParams.get('dir') ?? undefined;
const requestParamDiff = requestParams.getAll('diff[]');
const requestParamFormat = Boolean(requestParams.get('format'));

const PRETTIER_OPTIONS_HTML: PrettierOptions = {
	parser: 'html',
};

const diffs: DiffChange[] = [];
const fileList: string[] = [];

if (requestParamDir !== undefined) {
	const dir = `${env('ROOT')}/${env('CRAWLER_RESOURCE_LOG_DIR')}/${requestParamDir}`;
	if (fs.existsSync(dir)) {
		if (requestParamDiff.length >= 2) {
			/* 差分チェック */
			const [file1, file2] = await Promise.all([fs.promises.readFile(`${dir}/${requestParamDiff.at(0)}`), fs.promises.readFile(`${dir}/${requestParamDiff.at(1)}`)]);

			let file1String: string;
			let file2String: string;
			if (requestParamFormat) {
				[file1String, file2String] = await Promise.all([format(file1.toString(), PRETTIER_OPTIONS_HTML), format(file2.toString(), PRETTIER_OPTIONS_HTML)]);
			} else {
				file1String = file1.toString();
				file2String = file2.toString();
			}

			diffs.push(...diffLines(file2String, file1String, { newlineIsToken: true }));
			diffs.forEach((diffPart, index) => {
				const maxLine = 5;
				const omit = '...';

				if (diffPart.count !== undefined && diffPart.count > maxLine && !diffPart.added && !diffPart.removed) {
					const lines = diffPart.value.split('\n');

					if (index === 0) {
						diffPart.value = lines
							.slice(lines.length - maxLine + 1)
							.concat(omit)
							.join('\n');
					} else if (index === diffs.length - 1) {
						diffPart.value = [omit].concat(lines.slice(0, maxLine)).join('\n');
					} else if (diffPart.count > maxLine * 2) {
						diffPart.value = lines
							.slice(0, maxLine)
							.concat(omit, lines.slice(lines.length - maxLine - 1))
							.join('\n');
					}
				}
			});

			logger.debug('Diff mode', requestParamDiff, diffs);
		}

		/* 初期表示 */
		fileList.push(...(await fs.promises.readdir(dir)).filter((filePath) => filePath.endsWith('.txt')).reverse());
	}
}
---

<Layout astroFilePath={Astro.self.moduleId} structuredData={structuredData}>
	{
		diffs.length >= 1 && (
			<CrawlerDiff>
				<tbody>
					{diffs.map((part) => (
						<>
							{!part.added && !part.removed && (
								<CrawlerDiffLine>
									<td />
									{/* prettier-ignore */}
									<td><pre><code>{part.value}</code></pre></td>
								</CrawlerDiffLine>
							)}
							{part.added && !part.removed && (
								<CrawlerDiffLine type="added">
									<td>+</td>
									{/* prettier-ignore */}
									<td><pre><code>{part.value}</code></pre></td>
								</CrawlerDiffLine>
							)}
							{!part.added && part.removed && (
								<CrawlerDiffLine type="removed">
									<td>-</td>
									{/* prettier-ignore */}
									<td><pre><code>{part.value}</code></pre></td>
								</CrawlerDiffLine>
							)}
						</>
					))}
				</tbody>
			</CrawlerDiff>
		)
	}
	{
		fileList.length >= 1 && (
			<form>
				<p>
					<input type="hidden" name="dir" value={requestParamDir} />
				</p>
				<p>
					<Label label="HTML 整形">
						<input type="checkbox" name="format" value="1" checked={requestParamFormat} />
					</Label>
				</p>

				<p>
					<SubmitButton>比較</SubmitButton>
				</p>

				<ul>
					{fileList.map((file) => (
						<li>
							<label>
								<input type="checkbox" name="diff[]" value={file} checked={requestParamDiff.includes(file)} /> <code>{file}</code>
							</label>
							(<a href={`log?dir=${requestParamDir};file=${file}`}>ソースコード</a>)
						</li>
					))}
				</ul>
			</form>
		)
	}
	{
		fileList.length === 0 && (
			<p>
				<strong>データがありません。</strong>
			</p>
		)
	}
</Layout>
