{
	"extends": "astro/tsconfigs/strict",
	"include": ["src/**/*.astro", "src/**/*.ts"],
	"compilerOptions": {
		/* Modules */
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@dao/*": ["src/dao/*"],
			"@utils/*": ["src/utils/*"]
		}
	}
}
