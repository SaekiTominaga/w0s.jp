{
	"extends": "astro/tsconfigs/strict",
	"include": ["src/**/*.astro", "src/**/*.ts"],
	"compilerOptions": {
		/* Type Checking */
		"noPropertyAccessFromIndexSignature": true,

		/* Modules */
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@dao/*": ["src/+dao/*"],
			"@type/*": ["src/+type/*"],
			"@util/*": ["src/+util/*"]
		}
	}
}
