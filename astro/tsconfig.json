{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "src/**/*.astro", "src/**/*.ts"],
	"exclude": ["dist"],
	"compilerOptions": {
		/* Modules */
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@config/*": ["src/+config/*"],
			"@db/*": ["src/+db/*"],
			"@util/*": ["src/+util/*"]
		}
	}
}
