{
	"name": "@w0s.jp/astro",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "astro dev",
		"build-dev": "astro check && tsc --noEmit && run-s _astro-build:*",
		"build-prod": "NODE_OPTIONS=\"--max-old-space-size=500\" run-s _astro-build:*",
		"lint": "eslint src/**/*.{astro,ts}",
		"node-lint": "eslint build/*.ts",
		"html-src-lint": "markuplint src/pages/**/*.astro",
		"html-dist-lint": "markuplint dist/client/**/*.html",
		"css-dev": "postcss style/*.css --base style -d public/assets/style -w",
		"css-prod": "npm run css-lint && postcss style/*.css --base style -d public/assets/style",
		"css-lint": "stylelint style/**/*.css",
		"js-dev": "rollup -c -w --environment build:development",
		"js-prod": "npm run js-lint && rollup -c --environment build:production",
		"js-lint": "eslint script/**/*.ts",
		"_astro-build:build": "astro build",
		"_astro-build:html": "node --experimental-strip-types build/html.ts -d dist/client",
		"_astro-build:svg": "node --experimental-strip-types build/svg.ts -f dist/client/**/*.svg -f dist/client/favicon.ico -c svgo.config.js",
		"_astro-build:feed": "node --experimental-strip-types build/feed.ts -d dist/client",
		"_astro-build:sitemap": "node --experimental-strip-types build/sitemap.ts -d dist/client --ignore 4** --ignore 5** --ignore admin -t template/xml/sitemap.ejs",
		"_astro-build:format": "prettier --config ../.prettierrc.mjs -w dist/client/**/*.{html,css}",
		"_astro-build:compress": "brotli-cli compress -g dist/client/**/*.{html,css,js,mjs,svg,atom} -g dist/client/favicon.ico -m text"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.4",
		"@astrojs/node": "^9.0.2",
		"@log4js-node/smtp": "^2.0.8",
		"@w0s/button-checkboxes": "^3.0.1",
		"@w0s/button-clipboard": "^3.0.1",
		"@w0s/button-confirm": "^3.0.1",
		"@w0s/button-media-same-play": "^3.0.1",
		"@w0s/closest-html-page": "^4.0.1",
		"@w0s/details-animation": "^6.0.1",
		"@w0s/footnote-reference-popover": "^7.0.1",
		"@w0s/form-control-validation": "^5.0.1",
		"@w0s/form-submit-overlay": "^4.0.1",
		"@w0s/html-escape": "^4.0.1",
		"@w0s/input-date-to-text": "^4.0.1",
		"@w0s/input-switch": "^5.1.1",
		"@w0s/isbn-verify": "^3.1.0",
		"@w0s/paapi-item-image-url-parser": "^3.1.1",
		"@w0s/report-js-error": "^3.0.1",
		"@w0s/report-same-referrer": "^4.0.1",
		"@w0s/string-convert": "^3.0.0",
		"@w0s/table-cell-ditto": "^4.1.1",
		"@w0s/textarea-auto-size": "^4.0.1",
		"@w0s/urlsearchparams-custom-separator": "^3.1.0",
		"@w0s/wareki": "^1.1.1",
		"astro": "^5.1.9",
		"dayjs": "^1.11.13",
		"diff": "^7.0.0",
		"dompurify": "^3.2.3",
		"dotenv": "^16.4.7",
		"ejs": "^3.1.10",
		"github-slugger": "^2.0.0",
		"glob": "^11.0.1",
		"highlight.js": "^11.11.1",
		"jsdom": "^26.0.0",
		"log4js": "^6.9.1",
		"md5": "^2.3.0",
		"nodemailer": "^6.10.0",
		"prettier": "^3.4.2",
		"slash": "^5.1.0",
		"sqlite": "^5.1.1",
		"sqlite3": "^5.1.7",
		"svgo": "^3.3.2",
		"xml-formatter": "^3.6.4"
	},
	"devDependencies": {
		"@csstools/postcss-global-data": "^3.0.0",
		"@rollup/plugin-commonjs": "^28.0.2",
		"@rollup/plugin-node-resolve": "^16.0.0",
		"@rollup/plugin-terser": "^0.4.4",
		"@rollup/plugin-typescript": "^12.1.2",
		"@types/diff": "^7.0.0",
		"@types/dompurify": "^3.2.0",
		"@types/ejs": "^3.1.5",
		"@types/jsdom": "^21.1.7",
		"@types/md5": "^2.3.5",
		"@types/node": "^22.10.10",
		"@types/nodemailer": "^6.4.17",
		"@types/trusted-types": "^2.0.7",
		"astro-eslint-parser": "^1.2.1",
		"brotli-cli": "^2.1.0",
		"cross-env": "^7.0.3",
		"cssnano": "^7.0.6",
		"cssnano-preset-lite": "^4.0.3",
		"eslint-plugin-astro": "^1.3.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.5.1",
		"postcss-cli": "^11.0.0",
		"postcss-custom-media": "^11.0.5",
		"postcss-import": "^16.1.0",
		"postcss-nesting": "^13.0.1",
		"prettier-plugin-astro": "^0.14.1",
		"rollup": "^4.32.0"
	}
}
