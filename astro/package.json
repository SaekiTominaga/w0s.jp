{
	"name": "@w0s.jp/astro",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "conc \"astro dev\" \"vitest --coverage --watch\"",
		"prebuild": "conc \"astro check\" \"tsc --noEmit\" \"stylelint src/components/**/*.astro\" \"npm run build -w @w0s.jp/frontend\"",
		"build": "astro build && conc \"npm run build:feed\" \"npm run build:sitemap\"",
		"build:feed": "node build/feed.ts -d dist/client",
		"build:sitemap": "node build/sitemap.ts -d dist/client --ignore 4** --ignore 5** --ignore admin -t template/xml/sitemap.ejs",
		"postbuild": "prettier --config ../.prettierrc.mjs -w dist/client/**/*.html dist/client/assets/astro/*.css && brotli-cli compress -g dist/client/**/*.{html,atom} -g dist/client/assets/astro/*.css -m text",
		"lint:src": "conc \"eslint @types/*.d.ts build/**/*.ts src/**/*.{astro,ts}\" \"markuplint src/pages/**/*.astro\" \"stylelint src/**/*.astro\"",
		"lint:dist": "markuplint dist/client/**/*.html",
		"test": "conc \"node --experimental-test-coverage --test build/**/*.test.ts src/+util/*.test.ts\" \"vitest run\""
	},
	"dependencies": {
		"@astrojs/check": "^0.9.6",
		"@astrojs/node": "^9.5.1",
		"@log4js-node/smtp": "^2.0.8",
		"@w0s/env-value-type": "^1.0.0",
		"@w0s/html-escape": "^4.0.1",
		"@w0s/isbn-verify": "^3.1.2",
		"@w0s/paapi-item-image-url-parser": "^3.2.3",
		"@w0s/sqlite-utility": "^1.1.0",
		"@w0s/urlsearchparams-custom-separator": "^3.1.1",
		"@w0s/wareki": "^1.1.3",
		"astro": "^5.16.4",
		"better-sqlite3": "^12.5.0",
		"dayjs": "^1.11.19",
		"diff": "^8.0.2",
		"dompurify": "^3.3.0",
		"ejs": "^3.1.10",
		"fast-xml-parser": "^5.3.2",
		"github-slugger": "^2.0.0",
		"highlight.js": "^11.11.1",
		"jsdom": "^27.2.0",
		"kysely": "^0.28.8",
		"log4js": "^6.9.1",
		"md5": "^2.3.0",
		"nodemailer": "^7.0.11",
		"prettier": "^3.7.4",
		"slash": "^5.1.0"
	},
	"devDependencies": {
		"@types/better-sqlite3": "^7.6.13",
		"@types/ejs": "^3.1.5",
		"@types/jsdom": "^27.0.0",
		"@types/md5": "^2.3.6",
		"@types/nodemailer": "^7.0.4",
		"@vitest/coverage-v8": "^4.0.15",
		"astro-eslint-parser": "^1.2.2",
		"brotli-cli": "^2.1.0",
		"eslint-plugin-astro": "^1.5.0",
		"node-html-parser": "^7.0.1",
		"postcss-nesting": "^13.0.1",
		"prettier-plugin-astro": "^0.14.1",
		"stylelint-config-html": "^1.1.0",
		"vitest": "^4.0.15"
	}
}
