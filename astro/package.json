{
	"name": "astro",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "astro dev && vitest --coverage --watch",
		"prebuild": "astro check && tsc --noEmit && stylelint src/components/**/*.astro && pnpm -F frontend build",
		"build": "astro build && pnpm run /^build:.*/",
		"build:feed": "node build/feed.ts -d dist/client",
		"build:sitemap": "node build/sitemap.ts -d dist/client --ignore 4** --ignore 5** --ignore admin -t template/xml/sitemap.ejs",
		"postbuild": "prettier --config ../.prettierrc.mjs -w dist/client/**/*.html dist/client/assets/astro/*.css && brotli-cli compress -g dist/client/**/*.{html,atom} -g dist/client/assets/astro/*.css -m text",
		"lint": "pnpm run /^lint:.*/",
		"lint:html": "markuplint src/pages/**/*.astro",
		"lint:css": "stylelint src/**/*.astro",
		"lint:js": "eslint @types/*.d.ts build/**/*.ts src/**/*.{astro,ts}",
		"lint-html-dist": "markuplint dist/client/**/*.html",
		"pretest": "tsc --noEmit",
		"test": "pnpm run /^test:.*/",
		"test:node": "node --experimental-test-coverage --test build/**/*.test.ts src/+util/*.test.ts",
		"test:vitest": "vitest run"
	},
	"dependencies": {
		"@astrojs/check": "0.9.6",
		"@astrojs/node": "9.5.2",
		"@log4js-node/smtp": "2.0.8",
		"@w0s/env-value-type": "1.0.1",
		"@w0s/html-escape": "4.0.2",
		"@w0s/isbn-verify": "3.1.2",
		"@w0s/paapi-item-image-url-parser": "3.2.3",
		"@w0s/sqlite-utility": "2.0.0",
		"@w0s/urlsearchparams-custom-separator": "3.1.2",
		"@w0s/wareki": "1.1.5",
		"astro": "5.16.11",
		"better-sqlite3": "12.6.2",
		"dayjs": "1.11.19",
		"diff": "8.0.3",
		"dompurify": "3.3.1",
		"ejs": "4.0.1",
		"github-slugger": "2.0.0",
		"highlight.js": "11.11.1",
		"js-yaml": "4.1.1",
		"jsdom": "27.3.0",
		"kysely": "0.28.10",
		"log4js": "6.9.1",
		"md5": "2.3.0",
		"nodemailer": "7.0.12",
		"slash": "5.1.0"
	},
	"devDependencies": {
		"@types/better-sqlite3": "7.6.13",
		"@types/ejs": "3.1.5",
		"@types/js-yaml": "4.0.9",
		"@types/jsdom": "27.0.0",
		"@types/md5": "2.3.6",
		"@types/nodemailer": "7.0.5",
		"@vitest/coverage-v8": "4.0.18",
		"astro-eslint-parser": "1.2.2",
		"eslint-plugin-astro": "1.5.0",
		"node-html-parser": "7.0.2",
		"postcss-nesting": "14.0.0",
		"stylelint-config-html": "1.1.0",
		"vitest": "4.0.18"
	},
	"packageManager": "pnpm@10.28.1"
}
