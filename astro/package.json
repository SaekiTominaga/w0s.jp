{
	"name": "@w0s.jp/astro",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "astro dev",
		"prebuild": "conc \"astro check\" \"tsc --noEmit\" \"npm run css-prod -w @w0s.jp/frontend\" \"npm run js-prod -w @w0s.jp/frontend\" \"npm run svg -w @w0s.jp/frontend\"",
		"build": "astro build",
		"postbuild": "npm run _postbuild-html && conc \"npm run _postbuild-feed\" \"npm run _postbuild-sitemap\" \"npm run _postbuild-format\" && npm run _postbuild-compress",
		"lint": "eslint src/**/*.{astro,ts}",
		"node-lint": "eslint build/*.ts",
		"html-src-lint": "markuplint src/pages/**/*.astro",
		"html-dist-lint": "markuplint dist/client/**/*.html",
		"_postbuild-html": "node --experimental-strip-types build/html.ts -d dist/client",
		"_postbuild-feed": "node --experimental-strip-types build/feed.ts -d dist/client",
		"_postbuild-sitemap": "node --experimental-strip-types build/sitemap.ts -d dist/client --ignore 4** --ignore 5** --ignore admin -t template/xml/sitemap.ejs",
		"_postbuild-format": "prettier --config ../.prettierrc.mjs -w dist/client/**/*.html",
		"_postbuild-compress": "brotli-cli compress -g dist/client/**/*.{html,atom} -m text"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.4",
		"@astrojs/node": "^9.0.2",
		"@log4js-node/smtp": "^2.0.8",
		"@w0s/html-escape": "^4.0.1",
		"@w0s/isbn-verify": "^3.1.0",
		"@w0s/paapi-item-image-url-parser": "^3.1.1",
		"@w0s/urlsearchparams-custom-separator": "^3.1.0",
		"@w0s/wareki": "^1.1.1",
		"astro": "^5.1.9",
		"dayjs": "^1.11.13",
		"diff": "^7.0.0",
		"dompurify": "^3.2.4",
		"dotenv": "^16.4.7",
		"ejs": "^3.1.10",
		"github-slugger": "^2.0.0",
		"glob": "^11.0.1",
		"highlight.js": "^11.11.1",
		"jsdom": "^26.0.0",
		"log4js": "^6.9.1",
		"md5": "^2.3.0",
		"nodemailer": "^6.10.0",
		"prettier": "^3.4.2",
		"slash": "^5.1.0",
		"sqlite": "^5.1.1",
		"sqlite3": "^5.1.7",
		"xml-formatter": "^3.6.4"
	},
	"devDependencies": {
		"@types/diff": "^7.0.0",
		"@types/dompurify": "^3.2.0",
		"@types/ejs": "^3.1.5",
		"@types/jsdom": "^21.1.7",
		"@types/md5": "^2.3.5",
		"@types/node": "^22.10.10",
		"@types/nodemailer": "^6.4.17",
		"astro-eslint-parser": "^1.2.1",
		"brotli-cli": "^2.1.0",
		"eslint-plugin-astro": "^1.3.1",
		"prettier-plugin-astro": "^0.14.1"
	}
}
