{
	"root": true,
	"env": {
		"es2022": true
	},
	"extends": ["@w0s/eslint-config"],
	"parserOptions": {
		"sourceType": "module"
	},
	"ignorePatterns": ["node/dist/**/*.js", "public/assets/script/*.js", "public/assets/script/*.mjs"],
	"overrides": [
		{
			"files": ["node/src/*Interface.ts"],
			"rules": {
				"semi": "off"
			}
		},
		{
			"files": ["node/src/build/component/*.ts"],
			"rules": {
				"class-methods-use-this": "off"
			}
		},
		{
			"files": ["public/assets/script/_src/analytics.ts"],
			"rules": {
				"no-multi-assign": "off",
				"no-underscore-dangle": "off",
				"no-var": "off"
			}
		}
	]
}
