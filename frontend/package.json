{
	"name": "@w0s.jp/frontend",
	"private": true,
	"type": "module",
	"scripts": {
		"precss-dev": "rimraf ../public/assets/style/*.br -g",
		"css-dev": "postcss style/*.css --base style -d ../public/assets/style -w",
		"precss-prod": "npm run css-lint && rimraf ../public/assets/style/* -g",
		"css-prod": "postcss style/*.css --base style -d ../public/assets/style",
		"postcss-prod": "prettier --config ../.prettierrc.mjs -w ../public/assets/style/*.css && brotli-cli compress -g ../public/assets/style/*.css -m text",
		"css-lint": "stylelint style/**/*.css",
		"prejs-dev": "rimraf ../public/assets/script/*.br -g",
		"js-dev": "rollup -c -w --environment build:development",
		"prejs-prod": "tsc --project script --noEmit && npm run js-lint && rimraf ../public/assets/script/* -g",
		"js-prod": "rollup -c --environment build:production",
		"postjs-prod": "brotli-cli compress -g ../public/assets/script/*.{js,mjs} -m text",
		"js-lint": "eslint script/**/*.ts",
		"presvg": "rimraf ../public/**/*.svg ../public/**/*.svg.br ../public/favicon.ico ../public/favicon.ico.br -g",
		"svg": "node --experimental-strip-types build/svg.ts -i image -o ../public -c svgo.config.js",
		"postsvg": "brotli-cli compress -g ../public/**/*.svg -g ../public/favicon.ico -m text",
		"node-lint": "eslint build/*.ts"
	},
	"dependencies": {
		"@w0s/button-checkboxes": "^3.0.1",
		"@w0s/button-clipboard": "^3.0.1",
		"@w0s/button-confirm": "^3.0.1",
		"@w0s/button-media-same-play": "^3.0.1",
		"@w0s/closest-html-page": "^4.0.1",
		"@w0s/details-animation": "^6.0.1",
		"@w0s/footnote-reference-popover": "^7.0.1",
		"@w0s/form-control-validation": "^5.0.1",
		"@w0s/form-submit-overlay": "^4.0.1",
		"@w0s/input-date-to-text": "^4.0.2",
		"@w0s/input-switch": "^5.1.1",
		"@w0s/report-js-error": "^3.0.1",
		"@w0s/report-same-referrer": "^4.0.1",
		"@w0s/string-convert": "^3.0.2",
		"@w0s/table-cell-ditto": "^4.1.1",
		"@w0s/textarea-auto-size": "^4.0.1",
		"slash": "^5.1.0",
		"svgo": "^4.0.0"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^28.0.2",
		"@rollup/plugin-node-resolve": "^16.0.2",
		"@rollup/plugin-typescript": "^12.1.2",
		"@types/trusted-types": "^2.0.7",
		"cssnano": "^7.0.6",
		"cssnano-preset-lite": "^4.0.3",
		"postcss": "^8.5.1",
		"postcss-cli": "^11.0.0",
		"postcss-custom-media": "^11.0.5",
		"postcss-import": "^16.1.0",
		"postcss-nesting": "^13.0.1",
		"rollup": "^4.52.4"
	}
}
