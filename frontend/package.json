{
	"name": "@w0s.jp/frontend",
	"private": true,
	"type": "module",
	"scripts": {
		"predev": "rimraf -g \"../public/assets/{script,style}/*.br\"",
		"dev": "conc \"postcss style/*.css --base style -d ../public/assets/style -w\" \"rollup -c -w --environment build:development\"",
		"prebuild": "npm run lint && rimraf -g \"../public/**/*.{svg,svg.br}\" \"../public/favicon.{ico,ico.br}\" \"../public/assets/{script,style}/*\"",
		"build": "conc \"npm run css\" \"npm run js\" \"npm run svg\"",
		"postbuild": "prettier --config ../.prettierrc.mjs -w \"../public/assets/script/*.{js,mjs}\" \"../public/assets/style/*.css\" && brotli-cli compress -g \"../public/assets/script/*.{js,mjs}\" \"../public/assets/style/*.css\" \"../public/**/*.svg\" \"../public/favicon.ico\" -m text",
		"lint": "conc \"tsc --project script --noEmit\" \"eslint build/**/*.ts script/**/*.ts\" \"stylelint style/**/*.css\"",
		"css": "postcss style/*.css --base style -d ../public/assets/style",
		"js": "rollup -c --environment build:production",
		"svg": "node --experimental-strip-types build/svg.ts -i image -o ../public -c svgo.config.js"
	},
	"dependencies": {
		"@w0s/button-checkboxes": "^3.0.1",
		"@w0s/button-clipboard": "^3.0.1",
		"@w0s/button-confirm": "^3.0.1",
		"@w0s/button-media-same-play": "^3.0.1",
		"@w0s/closest-html-page": "^4.0.1",
		"@w0s/details-animation": "^6.0.1",
		"@w0s/footnote-reference-popover": "^7.2.0",
		"@w0s/form-control-validation": "^5.0.1",
		"@w0s/form-submit-overlay": "^4.0.2",
		"@w0s/input-date-to-text": "^4.0.2",
		"@w0s/input-switch": "^5.1.1",
		"@w0s/report-js-error": "^3.0.1",
		"@w0s/report-same-referrer": "^4.0.1",
		"@w0s/string-convert": "^3.0.2",
		"@w0s/table-cell-ditto": "^4.1.1",
		"@w0s/textarea-auto-size": "^4.0.1",
		"slash": "^5.1.0",
		"svgo": "^4.0.0"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^29.0.0",
		"@rollup/plugin-node-resolve": "^16.0.3",
		"@rollup/plugin-typescript": "^12.3.0",
		"@types/trusted-types": "^2.0.7",
		"cssnano": "^7.1.2",
		"cssnano-preset-lite": "^4.0.4",
		"postcss": "^8.5.6",
		"postcss-cli": "^11.0.1",
		"postcss-custom-media": "^11.0.6",
		"postcss-import": "^16.1.1",
		"postcss-nesting": "^13.0.2",
		"rollup": "^4.53.3"
	}
}
