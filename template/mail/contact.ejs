<!doctype html>
<html lang="ja">
	<head>
		<style>
			table {
				border-collapse: collapse;
			}

			th,
			td {
				border: 1px solid;
				padding: 0.5em;
				background-color: #fff;
				color: #000;
			}

			th {
				background-color: #eee;
				text-align: start;
			}

			pre {
				white-space: pre-wrap;
				font-family: inherit;
			}

			dt {
				font-weight: bold;
			}

			dd {
				margin-inline-start: 1em;
			}
		</style>
	</head>
	<body>
		<table>
			<tbody>
				<tr>
					<th scope="row">名前</th>
					<td><%= input.yourname %></td>
				</tr>
				<tr>
					<th scope="row">Eメールアドレス</th>
					<td><%= input.email %></td>
				</tr>
				<tr>
					<th scope="row">返信の有無</th>
					<td><%_ if (input.reply === 'yes') { _%>必要<%_ } else { _%>不要<%_ } _%></td>
				</tr>
				<tr>
					<th scope="row">内容</th>
					<td>
						<pre><%= input.body %></pre>
					</td>
				</tr>
			</tbody>
		</table>

		<dl>
			<dt>IP アドレス</dt>
			<dd>
				<a href="https://ja.asuka.io/whois/<%= ip %>"><%= ip %></a>
			</dd>
			<dt>ユーザーエージェント</dt>
			<dd><%= ua %></dd>
		</dl>
	</body>
</html>
