{
	"name": "@w0s.jp/backend",
	"private": true,
	"type": "module",
	"scripts": {
		"app": "nodemon --inspect node/dist/app.js",
		"watch": "tsc --project node/tsconfig.json -w",
		"build": "tsc --project node/tsconfig.json",
		"lint": "eslint node/src/**/*.ts node/@types/*.d.ts",
		"config-convert": "json2ts -i configure/schema -o configure/type",
		"config-validate": "run-p _config-validate:*",
		"errorpage-lint": "markuplint errorpage/*.html",
		"_config-validate:akamatsu-generator": "ajv --spec=draft7 -s configure/schema/akamatsu-generator.json -d configure/akamatsu-generator.json",
		"_config-validate:amazon-ads": "ajv --spec=draft7 -s configure/schema/amazon-ads.json -d configure/amazon-ads.json",
		"_config-validate:common": "ajv --spec=draft7 -s configure/schema/common.json -d configure/common.json",
		"_config-validate:contact": "ajv --spec=draft7 -s configure/schema/contact.json -d configure/contact.json",
		"_config-validate:crawler-news": "ajv --spec=draft7 -s configure/schema/crawler-news.json -d configure/crawler-news.json",
		"_config-validate:crawler-resource": "ajv --spec=draft7 -s configure/schema/crawler-resource.json -d configure/crawler-resource.json",
		"_config-validate:kumeta-twitter": "ajv --spec=draft7 -s configure/schema/kumeta-twitter.json -d configure/kumeta-twitter.json",
		"_config-validate:tokyu-car-history": "ajv --spec=draft7 -s configure/schema/tokyu-car-history.json -d configure/tokyu-car-history.json"
	},
	"dependencies": {
		"@log4js-node/smtp": "^2.0.8",
		"@saekitominaga/paapi-item-image-url-parser": "^2.2.4",
		"@saekitominaga/string-escape-html": "^2.0.1",
		"@w0s.jp/util": "*",
		"amazon-paapi": "^1.0.7",
		"basic-auth": "^2.0.1",
		"compression": "^1.7.4",
		"dayjs": "^1.11.7",
		"diff": "^5.1.0",
		"ejs": "^3.1.9",
		"express": "^4.18.2",
		"express-validator": "^7.0.1",
		"htpasswd-js": "^1.0.2",
		"log4js": "^6.9.1",
		"nodemailer": "^6.9.2",
		"paapi5-typescript-sdk": "^0.2.0",
		"qs": "^6.11.2",
		"sharp": "^0.32.1",
		"sqlite": "^4.2.1",
		"sqlite3": "^5.1.6"
	},
	"devDependencies": {
		"@types/basic-auth": "^1.1.3",
		"@types/compression": "^1.7.2",
		"@types/diff": "^5.0.3",
		"@types/ejs": "^3.1.2",
		"@types/express": "^4.17.17",
		"@types/nodemailer": "^6.4.8",
		"@types/qs": "^6.9.7",
		"ajv-cli": "^5.0.0",
		"json-schema-to-typescript": "^13.0.1",
		"nodemon": "^2.0.22",
		"npm-run-all": "^4.1.5",
		"onchange": "^7.1.0",
		"typescript": "^5.0.4"
	}
}
