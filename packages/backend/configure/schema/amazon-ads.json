{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://w0s.jp/amazon-ads.json",
	"type": "object",
	"title": "Amazon 商品広告管理",
	"required": ["view", "validator", "json"],
	"properties": {
		"view": {
			"type": "object",
			"title": "view ファイル名",
			"required": ["init"],
			"properties": {
				"init": {
					"type": "string",
					"title": "正常時"
				}
			},
			"additionalProperties": false
		},
		"validator": {
			"type": "object",
			"title": "バリデーター",
			"required": ["category"],
			"properties": {
				"category": {
					"type": "object",
					"title": "Eメールアドレス",
					"required": ["message"],
					"properties": {
						"message": {
							"type": "object",
							"title": "カテゴリー"
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		},
		"json": {
			"type": "object",
			"title": "JSON ファイル生成",
			"required": ["endpoint", "directory", "extension"],
			"properties": {
				"endpoint": {
					"type": "string",
					"title": "エンドポイント"
				},
				"directory": {
					"type": "string",
					"title": "保存ディレクトリ"
				},
				"extension": {
					"type": "string",
					"title": "拡張子"
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
