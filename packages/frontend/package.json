{
	"name": "@w0s.jp/frontend",
	"private": true,
	"type": "module",
	"scripts": {
		"node-build-watch": "tsc --project node/tsconfig.json -w",
		"node-build-all": "tsc --project node/tsconfig.json",
		"node-lint": "eslint node/src/**/*.ts node/__tests__/**/*.test.js",
		"node-test": "npm run config-convert && npm run node-build-all && cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
		"config-convert": "json2ts -i configure/schema -o configure/type",
		"config-validate": "run-p _config-validate:*",
		"html-build-watch": "run-p _html-build-watch:*",
		"html-build-all": "run-s _html-build-all:*",
		"html-lint": "markuplint public/*.html public/admin/*.html public/kumeta/**/*.html public/madoka/**/*.html public/tokyu/**/*.html",
		"css-build-watch": "run-p _css-build-watch:*",
		"css-build-all": "run-s _css-build-all:*",
		"css-lint": "stylelint style/**/*.css",
		"js-build-watch": "run-p _js-build-watch:*",
		"js-build-all": "run-s _js-build-all:*",
		"js-lint": "eslint script/**/*.ts",
		"svg-build-watch": "run-p _svg-build-watch:*",
		"feed": "run-p _feed:*",
		"sitemap": "node node/dist/build.js Sitemap",
		"_config-validate:build": "ajv --spec=draft7 -s configure/schema/build.json -d configure/build.json",
		"_html-build-watch:build": "onchange -f add -f change -v \"../../html/**/*.(html|json)\" -- node node/dist/build.js Html {{fileDir}}/{{fileBaseNoExt}}.html",
		"_html-build-watch:compress": "onchange -f add -f change -v public/**/*.html --exclude public/styleguide/*.html -- brotlin compress {{file}} -m 1",
		"_html-build-watch:lint": "onchange -f add -f change -v public/**/*.html --exclude public/styleguide/*.html -- markuplint {{file}}",
		"_html-build-all:build": "node node/dist/build.js Html ../../html/**/*.html",
		"_html-build-all:compress": "brotlin compress public/*.html -m 1",
		"_html-build-all:compress-admin": "brotlin compress public/admin/**/*.html -m 1",
		"_html-build-all:compress-kumeta": "brotlin compress public/kumeta/**/*.html -m 1",
		"_html-build-all:compress-madoka": "brotlin compress public/madoka/**/*.html -m 1",
		"_html-build-all:compress-tokyu": "brotlin compress public/tokyu/**/*.html -m 1",
		"_html-build-all:lint": "npm run html-lint",
		"_css-build-watch:build": "postcss style/*.css --base style -d style/.temp -w",
		"_css-build-watch:format": "onchange -f add -f change style/.temp/*.css -- node node/dist/build.js Css {{file}} public/assets/style",
		"_css-build-watch:compress": "onchange -f add -f change public/assets/style/*.css -- brotlin compress {{file}} -m 1",
		"_css-build-watch:kss": "onchange style/**/*.css -e style/.temp -- npm run _css-build-all:kss",
		"_css-build-all:build": "postcss style/*.css --base style -d public/assets/style",
		"_css-build-all:format": "node node/dist/build.js Css public/assets/style/*.css",
		"_css-build-all:compress": "brotlin compress public/assets/style/*.css -m 1",
		"_css-build-all:kss": "kss --source style --destination public/styleguide -m *.css --css ../assets/style/styleguide.css --js ../assets/script/w0s.mjs --homepage public/assets/style/_src/styleguide.md --title \"w0s.jp スタイルガイド\"",
		"_js-build-watch:build": "rollup -c -w",
		"_js-build-watch:compress": "onchange -f add -f change -v public/assets/script/*.{js,mjs} -- brotlin compress {{file}} -m 1",
		"_js-build-all:build": "rollup -c",
		"_js-build-all:compress": "brotlin compress public/assets/script/*.{js,mjs} -m 1",
		"_svg-build-watch:build": "onchange -f add -f change -v image/**/*.svg -- node node/dist/build.js Svg {{file}} svgo.config.cjs",
		"_svg-build-watch:compress": "onchange -f add -f change -v public/**/*.svg -v public/favicon.ico -- brotlin compress {{file}} -m 1",
		"_feed:build": "node node/dist/build.js Feed",
		"_feed:compress": "brotlin compress public/**/*.atom -m 1"
	},
	"dependencies": {
		"@saekitominaga/closest-html-page": "^2.0.1",
		"@saekitominaga/customelements-button-checkboxes-ctrl": "^1.2.0",
		"@saekitominaga/customelements-button-clipboard": "^1.1.4",
		"@saekitominaga/customelements-button-confirm": "^1.1.4",
		"@saekitominaga/customelements-button-media-sameplay": "^1.1.4",
		"@saekitominaga/customelements-details-animation": "^3.0.0",
		"@saekitominaga/customelements-input-date-totext": "^1.1.4",
		"@saekitominaga/customelements-input-switch": "^2.4.1",
		"@saekitominaga/customelements-portal": "^2.4.1",
		"@saekitominaga/customelements-tab": "^1.6.6",
		"@saekitominaga/customelements-textarea-autoheight": "^1.2.2",
		"@saekitominaga/customelements-tooltip-trigger": "^2.1.2",
		"@saekitominaga/htmlformcontrolelement-validation": "^2.0.2",
		"@saekitominaga/htmlformelement-before-unload-confirm": "^1.2.4",
		"@saekitominaga/htmlformelement-submit-overlay": "^2.1.0",
		"@saekitominaga/htmltablecellelement-ditto": "^1.1.8",
		"@saekitominaga/isbn-verify": "^2.0.1",
		"@saekitominaga/paapi-item-image-url-parser": "^2.2.4",
		"@saekitominaga/report-js-error": "^1.2.3",
		"@saekitominaga/report-same-referrer": "^1.2.1",
		"@saekitominaga/string-convert": "^1.0.4",
		"@saekitominaga/urlsearchparams-custom-separator": "^1.0.3",
		"@w0s.jp/util": "*",
		"dayjs": "^1.11.7",
		"decamelize": "^6.0.0",
		"ejs": "^3.1.9",
		"github-slugger": "^2.0.0",
		"globby": "^13.1.4",
		"highlight.js": "^11.8.0",
		"image-size": "^1.0.2",
		"jsdom": "^22.1.0",
		"prettier": "^3.0.0",
		"slash": "^5.1.0",
		"svgo": "^3.0.2",
		"xml-formatter": "^2.6.1"
	},
	"devDependencies": {
		"@types/ejs": "^3.1.2",
		"@types/jsdom": "^21.1.1",
		"@types/trusted-types": "^2.0.3"
	}
}
